{
  "ConnectionStrings": {
    "ErpDb": "Data Source=PATH_TO_DB_FILE.db"
  },
  "Database": {
    "Provider": "Sqlite"
  },
  "Security": {
    "PortalApiKey": "dev-portal-key-change-me",
    "AdminApiKey": "dev-admin-key-change-me",
    "ActorTokenSigningKey": "REPLACE_WITH_A_LONG_RANDOM_SECRET_64+_CHARS",
    "JwtSigningKey": "PUT_A_64+_CHAR_RANDOM_SECRET_HERE",
    "JwtIssuer": "mep1-erp",
    "JwtAudience": "mep1-erp",
    "JwtExpiryMinutes": 720
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
