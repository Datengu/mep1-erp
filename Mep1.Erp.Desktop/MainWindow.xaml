<Window x:Class="Mep1.Erp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MEP1BIM ERP Dashboard"
        WindowState="Maximized"
        MinHeight="800"
        MinWidth="1200"
        Background="#FF1E1E1E"
        Foreground="#FFE0E0E0">

    <Window.Resources>

        <!-- Dark DataGrid style for Applications tab -->
        <Style x:Key="DarkDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="RowBackground" Value="#FF262626"/>
            <Setter Property="AlternatingRowBackground" Value="#FF303030"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="ColumnHeaderHeight" Value="28"/>
            <Setter Property="RowHeight" Value="26"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="0"/>

            <!-- Selection colors (avoid default bright blue) -->
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="SelectionMode" Value="Single"/>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=Background}"/>
                        <Setter Property="Foreground" Value="#FFE0E0E0"/>
                        <Setter Property="BorderBrush" Value="#FF444444"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF333333"/>
                        <Setter Property="Foreground" Value="#FFE0E0E0"/>
                        <Setter Property="BorderBrush" Value="#FF444444"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Wrapped text style for Notes column -->
        <Style x:Key="WrappedCellTextBlock" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <!-- Bolder date style -->
        <Style x:Key="BoldDateTextBlock" TargetType="TextBlock" BasedOn="{StaticResource WrappedCellTextBlock}">
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

    </Window.Resources>

    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <!-- Top bar -->
            <RowDefinition Height="40"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Background="#FF262626">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
               Text="MEP1BIM ERP"
               FontSize="16"
               FontWeight="Bold"
               Margin="10,0"
               VerticalAlignment="Center"/>

            <TextBlock Grid.Column="1"
               Text="{Binding AppVersion}"
               FontSize="12"
               Foreground="#FFBFBFBF"
               Margin="0,0,10,0"
               VerticalAlignment="Center"/>
        </Grid>

        <!-- Tabs -->
        <TabControl x:Name="MainTabControl"
            Grid.Row="1"
            Background="#FF1E1E1E"
            BorderThickness="0"
            Padding="0"
            Margin="0">

            <!-- DARK TAB HEADER STYLE -->
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Foreground" Value="#FFE0E0E0"/>
                    <Setter Property="Background" Value="#FF333333"/>
                    <Setter Property="Padding" Value="10,4"/>
                    <Setter Property="Margin" Value="2,0"/>
                    <Setter Property="BorderThickness" Value="0"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid>
                                    <Border x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="#FF444444"
                                        BorderThickness="0"
                                        CornerRadius="4,4,0,0"/>
                                    <ContentPresenter x:Name="Content"
                                        ContentSource="Header"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="10,4"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- SELECTED TAB -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#FF444444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <!-- MOUSE OVER -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#FF3A3A3A"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Bd" Property="Opacity" Value="0.4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- 🔹 DASHBOARD TAB (HOME) -->
            <TabItem Header="Dashboard">
                <Grid Background="#FF1E1E1E">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title / description -->
                    <StackPanel Grid.Row="0" Margin="12,8,12,4">
                        <TextBlock Text="Cashflow overview"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>
                        <TextBlock Text="Shows how much money is still owed, what is overdue, and what is due in the next 30 days."
                       FontSize="12"
                       Opacity="0.7"/>
                    </StackPanel>

                    <!-- Metrics cards -->
                    <UniformGrid Grid.Row="1"
                        Rows="2"
                        Columns="3"
                        Margin="8,4,8,8">

                        <!-- Total outstanding (Net) -->
                        <Border Background="#FF262626"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4"
                            MouseLeftButtonUp="DashboardOutstandingCard_MouseLeftButtonUp"
                            Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="Outstanding (Net)"
                                           FontSize="12"
                                           Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.OutstandingNet, StringFormat='£{0:N2}'}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Dashboard.UnpaidInvoiceCount, StringFormat='{}{0} open invoices'}"
                                           FontSize="11"
                                           Opacity="0.7"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Overdue invoices -->
                        <Border Background="#FF2D1F1F"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4"
                            MouseLeftButtonUp="DashboardOverdueCard_MouseLeftButtonUp"
                            Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="Overdue (Net)"
                                           FontSize="12"
                                           Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.OverdueOutstandingNet, StringFormat='£{0:N2}'}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Dashboard.OverdueInvoiceCount, StringFormat='{}{0} overdue invoices'}"
                                           FontSize="11"
                                           Opacity="0.85"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Due in next 30 days -->
                        <Border Background="#FF263126"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4"
                            MouseLeftButtonUp="DashboardDueNext30Card_MouseLeftButtonUp"
                            Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="Due in next 30 days (Net)"
                                           FontSize="12"
                                           Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.DueNext30DaysOutstandingNet, StringFormat='£{0:N2}'}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Dashboard.DueNext30DaysCount, StringFormat='{}{0} invoices due'}"
                                           FontSize="11"
                                           Opacity="0.7"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Next due date -->
                        <Border Background="#FF262626"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4">
                            <StackPanel>
                                <TextBlock Text="Next due date"
                               FontSize="12"
                               Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.NextDueDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,2,0,0"/>
                                <TextBlock Text="Next invoice expected"
                               FontSize="11"
                               Opacity="0.7"
                               Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Active projects -->
                        <Border Background="#FF262626"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4">
                            <StackPanel>
                                <TextBlock Text="Active projects"
                               FontSize="12"
                               Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.ActiveProjects}"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,2,0,0"/>
                                <TextBlock Text="With timesheet activity"
                               FontSize="11"
                               Opacity="0.7"
                               Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Data freshness -->
                        <Border Background="#FF262626"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4">
                            <StackPanel>
                                <TextBlock Text="Data freshness"
                               FontSize="12"
                               Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.LatestInvoiceDate, StringFormat='Last invoice: {0:yyyy-MM-dd}'}"
                               FontSize="11"
                               Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Dashboard.LatestTimesheetDate, StringFormat='Last timesheet: {0:yyyy-MM-dd}'}"
                               FontSize="11"
                               Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Due schedule by week -->
                    <StackPanel Grid.Row="2"
                                Margin="12,0,12,8">
                        <TextBlock Text="Upcoming cashflow by week"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"/>

                        <ItemsControl ItemsSource="{Binding DueSchedule}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF262626"
                                            CornerRadius="4"
                                            Padding="6"
                                            Margin="0,2,0,2">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Stretch">
                                            <TextBlock VerticalAlignment="Center">
                                                <Run Text="Week "/>
                                                <Run Text="{Binding WeekStart, StringFormat='{}{0:dd MMM}'}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding WeekEnd, StringFormat='{}{0:dd MMM yyyy}'}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding InvoiceCount, StringFormat='{}{0} invoices'}"
                                                Width="120"
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding OutstandingNet, StringFormat='£{0:N2}'}"
                                                HorizontalAlignment="Right"
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Bottom area: Run Import button -->
                    <Grid Grid.Row="3" Margin="8">
                        <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Button x:Name="RunImportButton"
                                Content="Run Import (Refresh Data)"
                                Padding="12,6"
                                Background="#FF444444"
                                Foreground="#FFE0E0E0"
                                BorderBrush="#FF666666"
                                BorderThickness="1"
                        Click="RunImportButton_Click"
                        />
                            <TextBlock Text="  Updates all figures after pulling the latest data from Excel."
                               VerticalAlignment="Center"
                               FontSize="11"
                               Opacity="0.6"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- 🔹 PROJECTS TAB -->
            <TabItem Header="Projects">
                <Border Background="#FF1E1E1E"
                        BorderBrush="#FF333333"
                        BorderThickness="1"
                        Padding="6">
                    <TabControl x:Name="ProjectsRootTabControl"
                                Background="#FF1E1E1E"
                                BorderThickness="0"
                                Margin="0">
                        <TabItem Header="Projects">
                            <TabControl x:Name="ProjectsTabControl"
                                        Background="#FF1E1E1E"
                                        BorderThickness="0"
                                        Margin="0">

                                <!-- OVERVIEW -->
                                <TabItem Header="Overview">
                                    <Grid Background="#FF1E1E1E" Margin="8">
                                        <!-- Project list only (old LEFT side) -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Filter toolbar (unchanged) -->
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,6"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="Filter:"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>

                                                <Button Content="All"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowAllProjects_Click"/>

                                                <Button Content="Active"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowActiveProjects_Click"/>

                                                <Button Content="Inactive"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowInactiveProjects_Click"/>
                                            </StackPanel>

                                            <!-- Projects grid (unchanged) -->
                                            <DataGrid x:Name="ProjectsGrid"
                                                      Grid.Row="1"
                                                      ItemsSource="{Binding ProjectView}"
                                                      Style="{StaticResource DarkDataGridStyle}"
                                                      AutoGenerateColumns="False"
                                                      SelectionMode="Single"
                                                      SelectionChanged="ProjectsGrid_SelectionChanged">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Job" Binding="{Binding JobNameOrNumber}" Width="*"/>
                                                    <DataGridTextColumn Header="Code" Binding="{Binding BaseCode}" Width="50"/>
                                                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="40" IsReadOnly="True"/>
                                                    <DataGridTextColumn Header="Labour" Binding="{Binding LabourCost, StringFormat=£{0:N2}}" Width="100"/>
                                                    <DataGridTextColumn Header="Sub-Contractor" Binding="{Binding SupplierCost, StringFormat=£{0:N2}}" Width="100" IsReadOnly="True" />
                                                    <DataGridTextColumn Header="Total Cost" Binding="{Binding TotalCost, StringFormat=£{0:N2}}" Width="100" IsReadOnly="True" />
                                                    <DataGridTextColumn Header="Invoiced Net" Binding="{Binding InvoicedNet, StringFormat=£{0:N2}}" Width="100"/>
                                                    <DataGridTextColumn Header="Profit Net" Binding="{Binding ProfitNet, StringFormat=£{0:N2}}" Width="100"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </TabItem>

                                <TabItem Header="Project">
                                    <Grid Background="#FF1E1E1E" Margin="8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header / selected project meta -->
                                        <Border Grid.Row="0"
                                                Background="#FF232323"
                                                BorderBrush="#FF333333"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="10"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <TextBlock FontSize="18"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"
                                                               Text="{Binding SelectedProject.JobNameOrNumber, TargetNullValue=Select a project in Overview}"/>

                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Foreground="#FFBFBFBF"
                                                                   Text="{Binding SelectedProject.BaseCode, StringFormat=Code: {0}, TargetNullValue=Code: -}"
                                                                   Margin="0,0,12,0"/>
                                                        <TextBlock Foreground="#FFBFBFBF"
                                                                   Text="{Binding SelectedProject.Category, StringFormat=Category: {0}, TargetNullValue=Category: -}"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Nice-to-have: jump to edit tab (optional wiring later) -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Button Content="Edit Project"
                                                            Padding="12,6"
                                                            Click="OpenEditProjectTab_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Sub-tabs -->
                                        <TabControl Grid.Row="1"
                                                    Background="#FF1E1E1E"
                                                    BorderThickness="0">

                                            <!-- BALANCE -->
                                            <TabItem Header="Balance">
                                                <Grid Margin="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- 2-column layout: left = projected (now), right = actuals (future) -->
                                                    <Grid Grid.Row="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="16"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- LEFT: Projected summary -->
                                                        <Border Grid.Column="0"
                                                                Background="#FF232323"
                                                                BorderBrush="#FF333333"
                                                                BorderThickness="1"
                                                                CornerRadius="6"
                                                                Padding="12">

                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <!-- Title -->
                                                                <TextBlock Grid.Row="0"
                                                                           Foreground="White"
                                                                           FontWeight="SemiBold"
                                                                           FontSize="14"
                                                                           Text="Projected"/>

                                                                <Border Grid.Row="1"
                                                                        Height="1"
                                                                        Background="#FF333333"
                                                                        Margin="0,8,0,10"/>

                                                                <!-- Body -->
                                                                <Grid Grid.Row="2">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                    </Grid.RowDefinitions>

                                                                    <!-- Shared columns so everything aligns -->
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="120"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <!-- Row 0 -->
                                                                    <TextBlock Grid.Row="0"
                                                                               Grid.Column="0"
                                                                               Foreground="White"
                                                                               FontWeight="SemiBold"
                                                                               Text="Incoming total (net)"/>

                                                                    <TextBlock Grid.Row="0"
                                                                               Grid.Column="1"
                                                                               Foreground="White"
                                                                               FontWeight="SemiBold"
                                                                               Text="£"
                                                                               Margin="12,0,4,0"/>

                                                                    <TextBlock Grid.Row="0"
                                                                               Grid.Column="2"
                                                                               Foreground="White"
                                                                               FontWeight="SemiBold"
                                                                               TextAlignment="Right"
                                                                               Text="{Binding SelectedProjectIncomingNetTotal, StringFormat={}{0:N2}}"/>

                                                                    <!-- Row 1 -->
                                                                    <TextBlock Grid.Row="1"
                                                                               Grid.Column="0"
                                                                               Foreground="White"
                                                                               FontWeight="SemiBold"
                                                                               Margin="0,10,0,0"
                                                                               Text="Outgoing total (net)"/>

                                                                    <TextBlock Grid.Row="1"
                                                                               Grid.Column="1"
                                                                               Foreground="White"
                                                                               FontWeight="SemiBold"
                                                                               Margin="12,10,4,0"
                                                                               Text="£"/>

                                                                    <TextBlock Grid.Row="1"
                                                                               Grid.Column="2"
                                                                               Foreground="White"
                                                                               FontWeight="SemiBold"
                                                                               Margin="0,10,0,0"
                                                                               TextAlignment="Right"
                                                                               Text="{Binding SelectedProjectOutgoingNetTotal, StringFormat={}{0:N2}}"/>

                                                                    <!-- Row 2 (balance standout) -->
                                                                    <TextBlock Grid.Row="2"
                                                                               Grid.Column="0"
                                                                               Foreground="White"
                                                                               FontWeight="SemiBold"
                                                                               Margin="0,14,0,0"
                                                                               Text="Balance (incoming - outgoing)"/>

                                                                    <TextBlock Grid.Row="2"
                                                                               Grid.Column="1"
                                                                               Foreground="White"
                                                                               FontWeight="Bold"
                                                                               FontSize="16"
                                                                               Margin="12,14,4,0"
                                                                               Text="£"/>

                                                                    <TextBlock Grid.Row="2"
                                                                               Grid.Column="2"
                                                                               Foreground="White"
                                                                               FontWeight="Bold"
                                                                               FontSize="16"
                                                                               Margin="0,14,0,0"
                                                                               TextAlignment="Right"
                                                                               Text="{Binding SelectedProjectBalanceNetTotal, StringFormat={}{0:N2}}"/>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>

                                                        <!-- RIGHT: Actuals placeholder (empty for now) -->
                                                        <Border Grid.Column="2"
                                                                Background="#FF232323"
                                                                BorderBrush="#FF333333"
                                                                BorderThickness="1"
                                                                CornerRadius="6"
                                                                Padding="12"
                                                                Opacity="0.55">

                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="*"/>
                                                                </Grid.RowDefinitions>

                                                                <!-- Title -->
                                                                <TextBlock Grid.Row="0"
                                                                           Foreground="White"
                                                                           FontWeight="SemiBold"
                                                                           FontSize="14"
                                                                           Text="Actual"/>

                                                                <Border Grid.Row="1"
                                                                        Height="1"
                                                                        Background="#FF333333"
                                                                        Margin="0,8,0,10"/>

                                                                <!-- Body -->
                                                                <TextBlock Grid.Row="2"
                                                                           Foreground="#FFBFBFBF"
                                                                           Text="When actual outgoing / payments are tracked, this panel will mirror the Projected side."/>
                                                            </Grid>
                                                        </Border>
                                                    </Grid>

                                                </Grid>
                                            </TabItem>

                                            <!-- INCOMING -->
                                            <TabItem Header="Incoming">
                                                <Grid Margin="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- “Application -> Invoice -> Payment” grid (future link) -->
                                                    <GroupBox Grid.Row="0" Header="Applications / Invoices / Payments (to be linked)" Foreground="White" Margin="0,0,0,8">
                                                        <DataGrid ItemsSource="{Binding SelectedProjectIncomingRows}"
                                                                  Style="{StaticResource DarkDataGridStyle}"
                                                                  AutoGenerateColumns="False"
                                                                  IsReadOnly="True">
                                                            <DataGrid.Columns>
                                                                <DataGridTextColumn Header="App No." Binding="{Binding ApplicationNumber, StringFormat=APP{0}}" Width="70"/>
                                                                <DataGridTextColumn Header="App Net" Binding="{Binding ApplicationNet, StringFormat=£{0:N2}}" Width="90"/>
                                                                <DataGridTextColumn Header="App Date" Binding="{Binding ApplicationDate, StringFormat=yyyy-MM-dd}" Width="110"/>

                                                                <DataGridTextColumn Header="Invoice" Binding="{Binding InvoiceNumber}" Width="110"/>
                                                                <DataGridTextColumn Header="Inv Net" Binding="{Binding InvoiceNet, StringFormat=£{0:N2}}" Width="90"/>
                                                                <DataGridTextColumn Header="Inv Date" Binding="{Binding InvoiceDate, StringFormat=yyyy-MM-dd}" Width="110"/>

                                                                <DataGridTextColumn Header="Pay Net" Binding="{Binding PaymentValue, StringFormat=£{0:N2}}" Width="90"/>
                                                                <DataGridTextColumn Header="Pay Date" Binding="{Binding PaymentDate, StringFormat=yyyy-MM-dd}" Width="110"/>
                                                            </DataGrid.Columns>
                                                        </DataGrid>
                                                    </GroupBox>

                                                    <!-- CCFs -->
                                                    <GroupBox Grid.Row="1" Header="CCFs (this project)" Foreground="White" Margin="0,0,0,8">
                                                        <DataGrid ItemsSource="{Binding SelectedProjectCcfRefsView}"
                                                                  Style="{StaticResource DarkDataGridStyle}"
                                                                  AutoGenerateColumns="False"
                                                                  IsReadOnly="True">
                                                            <DataGrid.Columns>
