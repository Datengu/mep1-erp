                                        <Border Grid.Row="4" Background="#FF1E1E1E" CornerRadius="6" Padding="10" Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Net Amount"
                                                           Foreground="#FFE0E0E0" VerticalAlignment="Center" Margin="0,0,8,6"/>
                                                <TextBox Grid.Row="0" Grid.Column="1"
                                                         Text="{Binding EditInvoiceNetAmountText, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="0,0,12,6"/>

                                                <TextBlock Grid.Row="0" Grid.Column="2" Text="VAT Rate"
                                                           Foreground="#FFE0E0E0" VerticalAlignment="Center" Margin="0,0,8,6"/>
                                                <ComboBox Grid.Row="0" Grid.Column="3"
                                                          SelectedItem="{Binding EditInvoiceVatRateText}"
                                                          Margin="0,0,0,6">
                                                    <ComboBox.ItemsSource>
                                                        <x:Array Type="{x:Type sys:String}">
                                                            <sys:String>0%</sys:String>
                                                            <sys:String>5%</sys:String>
                                                            <sys:String>20%</sys:String>
                                                        </x:Array>
                                                    </ComboBox.ItemsSource>
                                                </ComboBox>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="VAT Amount"
                                                           Foreground="#FFE0E0E0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                                           Text="{Binding EditInvoiceVatAmountText}"
                                                           Foreground="#FFE0E0E0"
                                                           Opacity="0.85"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,12,0"/>

                                                <TextBlock Grid.Row="1" Grid.Column="2" Text="Gross Amount"
                                                           Foreground="#FFE0E0E0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Grid.Row="1" Grid.Column="3"
                                                           Text="{Binding EditInvoiceGrossAmountText}"
                                                           Foreground="#FFE0E0E0"
                                                           Opacity="0.85"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <!-- Notes -->
                                        <Border Grid.Row="5" Background="#FF1E1E1E" CornerRadius="6" Padding="10" Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Notes (optional)"
                                                           Foreground="#FFE0E0E0" VerticalAlignment="Top" Margin="0,2,8,0"/>
                                                <TextBox Grid.Column="1"
                                                         Text="{Binding EditInvoiceNotesText, UpdateSourceTrigger=PropertyChanged}"
                                                         AcceptsReturn="True"
                                                         TextWrapping="Wrap"
                                                         VerticalScrollBarVisibility="Auto"
                                                         Height="80"/>
                                            </Grid>
                                        </Border>

                                        <!-- Status strip -->
                                        <Border Grid.Row="6" Background="#FF1E1E1E" CornerRadius="6" Padding="10" Margin="0,0,0,10">
                                            <TextBlock Text="{Binding EditInvoiceStatusBarText}"
                                                       Foreground="#FFE0E0E0"
                                                       Opacity="0.9"
                                                       TextWrapping="Wrap"/>
                                        </Border>

                                        <!-- Buttons -->
                                        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Left">
                                            <Button Content="Save Changes"
                                                    Padding="12,6"
                                                    Margin="0,0,8,0"
                                                    Click="SaveInvoiceEdits_Click"/>

                                            <Button Content="Clear"
                                                    Padding="12,6"
                                                    Click="ClearEditInvoiceForm_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Right: Validation / help -->
                                <Border Grid.Column="1"
                                        Background="#FF262626"
                                        CornerRadius="6"
                                        Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="Edit rules"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,10"
                                                   Foreground="#FFE0E0E0"/>

                                        <TextBlock Text="- Select an invoice in the list and click Load selected"
                                                   Foreground="#FFE0E0E0" Opacity="0.85" Margin="0,0,0,4"/>
                                        <TextBlock Text="- Invoice number is read-only"
                                                   Foreground="#FFE0E0E0" Opacity="0.85" Margin="0,0,0,4"/>
                                        <TextBlock Text="- Net amount must be > 0"
                                                   Foreground="#FFE0E0E0" Opacity="0.85" Margin="0,0,0,4"/>

                                        <Border Background="#FF1E1E1E" CornerRadius="6" Padding="10" Margin="0,12,0,0">
                                            <TextBlock Text="{Binding EditInvoiceValidationText}"
                                                       Foreground="#FFE0E0E0"
                                                       Opacity="0.9"
                                                       TextWrapping="Wrap"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </Border>
            </TabItem>

            <!-- 🔹 APPLICATIONS TAB -->
            <TabItem Header="Applications" x:Name="ApplicationsTabItem">
                <Grid Margin="8" Background="#FF1E1E1E">
                    <DataGrid ItemsSource="{Binding UpcomingApplications}"
                              Style="{StaticResource DarkDataGridStyle}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Project" Binding="{Binding ProjectLabel}" Width="220"/>

                            <DataGridTextColumn Header="Project Code" Binding="{Binding ProjectCode}" Width="90"/>

                            <!-- Application Date (bold) -->
                            <DataGridTextColumn Header="Application Date"
                                                Binding="{Binding ApplicationDate, StringFormat=\{0:yyyy-MM-dd\}}"
                                                Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BoldDateTextBlock}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Days"
                                                Binding="{Binding DaysUntil}"
                                                Width="60" />

                            <DataGridTextColumn Header="Schedule Type" Binding="{Binding ScheduleType}" Width="110"/>

                            <DataGridTextColumn Header="Rule Type" Binding="{Binding RuleType}" Width="110"/>

                            <!-- Notes (wrap + fill remaining space) -->
                            <DataGridTextColumn Header="Notes"
                                                Binding="{Binding Notes}"
                                                Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource WrappedCellTextBlock}"/>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- 🔹 AUDIT TAB -->
            <TabItem Header="Audit">
                <Grid Background="#FF1E1E1E" Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filters -->
                    <WrapPanel Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Width="240"
                                 Text="{Binding AuditSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,12,0"/>

                        <TextBlock Text="EntityType:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Width="160"
                                 Text="{Binding AuditEntityTypeText, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,12,0"/>

                        <TextBlock Text="EntityId:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Width="160"
                                 Text="{Binding AuditEntityIdText, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,12,0"/>

                        <TextBlock Text="ActorWorkerId:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Width="90"
                                 Text="{Binding AuditActorWorkerIdText, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,12,0"/>

                        <TextBlock Text="Action:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Width="140"
                                 Text="{Binding AuditActionText, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,12,0"/>

                        <Button Content="Refresh"
                                Padding="10,4"
                                Click="RefreshAudit_Click"/>
                    </WrapPanel>

                    <!-- Grid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding AuditLogs}"
                              Style="{StaticResource DarkDataGridStyle}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="UTC" Binding="{Binding OccurredUtc, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="160"/>
                            <DataGridTextColumn Header="ActorId" Binding="{Binding ActorWorkerId}" Width="70"/>
                            <DataGridTextColumn Header="SubjectId" Binding="{Binding SubjectWorkerId}" Width="75"/>
                            <DataGridCheckBoxColumn Header="OnBehalf" Binding="{Binding IsOnBehalf}" Width="75"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding ActorRole}" Width="90"/>
                            <DataGridTextColumn Header="Source" Binding="{Binding ActorSource}" Width="90"/>
                            <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="140"/>
                            <DataGridTextColumn Header="EntityType" Binding="{Binding EntityType}" Width="140"/>
                            <DataGridTextColumn Header="EntityId" Binding="{Binding EntityId}" Width="140"/>
                            <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- 🔹 SETTINGS TAB -->
            <TabItem Header="Settings">
                <ScrollViewer Background="#FF1E1E1E">
                    <Grid Margin="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Timesheet folder -->
                        <TextBlock Text="Timesheet folder:"
                                   Grid.Row="0" Grid.Column="0"
                                   Margin="0,4"
                                   VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Settings.TimesheetFolder, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="0" Grid.Column="1"
                                 Margin="8,4"
                                 Background="#FF262626"
                                 Foreground="#FFE0E0E0"/>
                        <Button Content="Browse..."
                                Grid.Row="0" Grid.Column="2"
                                Margin="8,4"
                                Padding="8,4"
                                Click="BrowseTimesheetFolder_Click"/>

                        <!-- Finance sheet -->
                        <TextBlock Text="Finance Sheet path:"
                                   Grid.Row="1" Grid.Column="0"
                                   Margin="0,4"
                                   VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Settings.FinanceSheetPath, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="1" Grid.Column="1"
                                 Margin="8,4"
                                 Background="#FF262626"
                                 Foreground="#FFE0E0E0"/>
                        <Button Content="Browse..."
                                Grid.Row="1" Grid.Column="2"
                                Margin="8,4"
                                Padding="8,4"
                                Click="BrowseFinanceSheet_Click"/>

                        <!-- Job Source Info -->
                        <TextBlock Text="Job Source Info path:"
                                   Grid.Row="2" Grid.Column="0"
                                   Margin="0,4"
                                   VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Settings.JobSourcePath, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="2" Grid.Column="1"
                                 Margin="8,4"
                                 Background="#FF262626"
                                 Foreground="#FFE0E0E0"/>
                        <Button Content="Browse..."
                                Grid.Row="2" Grid.Column="2"
                                Margin="8,4"
                                Padding="8,4"
                                Click="BrowseJobSource_Click"/>

                        <!-- Invoice Register -->
                        <TextBlock Text="Invoice Register path:"
                                   Grid.Row="3" Grid.Column="0"
                                   Margin="0,4"
                                   VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Settings.InvoiceRegisterPath, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="3" Grid.Column="1"
                                 Margin="8,4"
                                 Background="#FF262626"
                                 Foreground="#FFE0E0E0"/>
                        <Button Content="Browse..."
                                Grid.Row="3" Grid.Column="2"
                                Margin="8,4"
                                Padding="8,4"
                                Click="BrowseInvoiceRegister_Click"/>

                        <!-- Application Schedule -->
                        <TextBlock Text="Application Schedule path:"
                                   Grid.Row="4" Grid.Column="0"
                                   Margin="0,4"
                                   VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Settings.ApplicationSchedulePath, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="4" Grid.Column="1"
                                 Margin="8,4"
                                 Background="#FF262626"
                                 Foreground="#FFE0E0E0"/>
                        <Button Content="Browse..."
                                Grid.Row="4" Grid.Column="2"
                                Margin="8,4"
                                Padding="8,4"
                                Click="BrowseApplicationSchedule_Click"/>

                        <!-- Upcoming applications horizon -->
                        <TextBlock Text="Upcoming apps (days ahead):"
                                   Grid.Row="5" Grid.Column="0"
                                   Margin="0,4"
                                   VerticalAlignment="Center"/>

                        <TextBox Text="{Binding Settings.UpcomingApplicationsDaysAhead, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="5" Grid.Column="1"
                                 Margin="8,4"
                                 Background="#FF262626"
                                 Foreground="#FFE0E0E0"/>

                        <TextBlock Text="How far ahead to generate application reminders (e.g. 30, 60, 90)."
                                   Grid.Row="5" Grid.Column="2"
                                   Margin="8,4"
                                   VerticalAlignment="Center"
                                   Opacity="0.6"
                                   FontSize="11"/>

                        <!-- Save button -->
                        <Button Content="Save settings"
                                Grid.Row="6" Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Margin="0,16,0,0"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Background="#FF444444"
                                Foreground="#FFE0E0E0"
                                BorderBrush="#FF666666"
                                BorderThickness="1"
                                Click="SaveSettingsButton_Click"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
