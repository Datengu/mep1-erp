<Window x:Class="Mep1.Erp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MEP1BIM ERP Dashboard"
        WindowState="Maximized"
        MinHeight="800"
        MinWidth="1200"
        Background="#FF1E1E1E"
        Foreground="#FFE0E0E0">

    <Window.Resources>

        <!-- Dark DataGrid style for Applications tab -->
        <Style x:Key="DarkDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="RowBackground" Value="#FF262626"/>
            <Setter Property="AlternatingRowBackground" Value="#FF303030"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="ColumnHeaderHeight" Value="28"/>
            <Setter Property="RowHeight" Value="26"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="0"/>

            <!-- Selection colors (avoid default bright blue) -->
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="SelectionMode" Value="Single"/>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=Background}"/>
                        <Setter Property="Foreground" Value="#FFE0E0E0"/>
                        <Setter Property="BorderBrush" Value="#FF444444"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF333333"/>
                        <Setter Property="Foreground" Value="#FFE0E0E0"/>
                        <Setter Property="BorderBrush" Value="#FF444444"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Wrapped text style for Notes column -->
        <Style x:Key="WrappedCellTextBlock" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <!-- Bolder date style -->
        <Style x:Key="BoldDateTextBlock" TargetType="TextBlock" BasedOn="{StaticResource WrappedCellTextBlock}">
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </Window.Resources>

    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <!-- Top bar -->
            <RowDefinition Height="40"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" Background="#FF262626">
            <TextBlock Text="MEP1BIM ERP"
                FontSize="16"
                FontWeight="Bold"
                Margin="10,0"
                VerticalAlignment="Center"/>
        </Grid>

        <!-- Tabs -->
        <TabControl x:Name="MainTabControl"
            Grid.Row="1"
            Background="#FF1E1E1E"
            BorderThickness="0"
            Padding="0"
            Margin="0">

            <!-- DARK TAB HEADER STYLE -->
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Foreground" Value="#FFE0E0E0"/>
                    <Setter Property="Background" Value="#FF333333"/>
                    <Setter Property="Padding" Value="10,4"/>
                    <Setter Property="Margin" Value="2,0"/>
                    <Setter Property="BorderThickness" Value="0"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid>
                                    <Border x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="#FF444444"
                                        BorderThickness="0"
                                        CornerRadius="4,4,0,0"/>
                                    <ContentPresenter x:Name="Content"
                                        ContentSource="Header"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="10,4"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- SELECTED TAB -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#FF444444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <!-- MOUSE OVER -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#FF3A3A3A"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Bd" Property="Opacity" Value="0.4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- 🔹 DASHBOARD TAB (HOME) -->
            <TabItem Header="Dashboard">
                <Grid Background="#FF1E1E1E">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title / description -->
                    <StackPanel Grid.Row="0" Margin="12,8,12,4">
                        <TextBlock Text="Cashflow overview"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>
                        <TextBlock Text="Shows how much money is still owed, what is overdue, and what is due in the next 30 days."
                       FontSize="12"
                       Opacity="0.7"/>
                    </StackPanel>

                    <!-- Metrics cards -->
                    <UniformGrid Grid.Row="1"
                        Rows="2"
                        Columns="3"
                        Margin="8,4,8,8">

                        <!-- Total outstanding (Net) -->
                        <Border Background="#FF262626"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4"
                            MouseLeftButtonUp="DashboardOutstandingCard_MouseLeftButtonUp"
                            Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="Outstanding (Net)"
                                           FontSize="12"
                                           Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.OutstandingNet, StringFormat='£{0:N2}'}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Dashboard.UnpaidInvoiceCount, StringFormat='{}{0} open invoices'}"
                                           FontSize="11"
                                           Opacity="0.7"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Overdue invoices -->
                        <Border Background="#FF2D1F1F"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4"
                            MouseLeftButtonUp="DashboardOverdueCard_MouseLeftButtonUp"
                            Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="Overdue (Net)"
                                           FontSize="12"
                                           Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.OverdueOutstandingNet, StringFormat='£{0:N2}'}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Dashboard.OverdueInvoiceCount, StringFormat='{}{0} overdue invoices'}"
                                           FontSize="11"
                                           Opacity="0.85"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Due in next 30 days -->
                        <Border Background="#FF263126"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4"
                            MouseLeftButtonUp="DashboardDueNext30Card_MouseLeftButtonUp"
                            Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="Due in next 30 days (Net)"
                                           FontSize="12"
                                           Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.DueNext30DaysOutstandingNet, StringFormat='£{0:N2}'}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Dashboard.DueNext30DaysCount, StringFormat='{}{0} invoices due'}"
                                           FontSize="11"
                                           Opacity="0.7"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Next due date -->
                        <Border Background="#FF262626"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4">
                            <StackPanel>
                                <TextBlock Text="Next due date"
                               FontSize="12"
                               Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.NextDueDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,2,0,0"/>
                                <TextBlock Text="Next invoice expected"
                               FontSize="11"
                               Opacity="0.7"
                               Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Active projects -->
                        <Border Background="#FF262626"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4">
                            <StackPanel>
                                <TextBlock Text="Active projects"
                               FontSize="12"
                               Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.ActiveProjects}"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,2,0,0"/>
                                <TextBlock Text="With timesheet activity"
                               FontSize="11"
                               Opacity="0.7"
                               Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Data freshness -->
                        <Border Background="#FF262626"
                            CornerRadius="6"
                            Padding="10"
                            Margin="4">
                            <StackPanel>
                                <TextBlock Text="Data freshness"
                               FontSize="12"
                               Opacity="0.8"/>
                                <TextBlock Text="{Binding Dashboard.LatestInvoiceDate, StringFormat='Last invoice: {0:yyyy-MM-dd}'}"
                               FontSize="11"
                               Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Dashboard.LatestTimesheetDate, StringFormat='Last timesheet: {0:yyyy-MM-dd}'}"
                               FontSize="11"
                               Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Due schedule by week -->
                    <StackPanel Grid.Row="2"
                                Margin="12,0,12,8">
                        <TextBlock Text="Upcoming cashflow by week"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"/>

                        <ItemsControl ItemsSource="{Binding DueSchedule}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF262626"
                                            CornerRadius="4"
                                            Padding="6"
                                            Margin="0,2,0,2">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Stretch">
                                            <TextBlock VerticalAlignment="Center">
                                                <Run Text="Week "/>
                                                <Run Text="{Binding WeekStart, StringFormat='{}{0:dd MMM}'}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding WeekEnd, StringFormat='{}{0:dd MMM yyyy}'}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding InvoiceCount, StringFormat='{}{0} invoices'}"
                                                Width="120"
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding OutstandingNet, StringFormat='£{0:N2}'}"
                                                HorizontalAlignment="Right"
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Bottom area: Run Import button -->
                    <Grid Grid.Row="3" Margin="8">
                        <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Button x:Name="RunImportButton"
                                Content="Run Import (Refresh Data)"
                                Padding="12,6"
                                Background="#FF444444"
                                Foreground="#FFE0E0E0"
                                BorderBrush="#FF666666"
                                BorderThickness="1"
                        Click="RunImportButton_Click"
                        />
                            <TextBlock Text="  Updates all figures after pulling the latest data from Excel."
                               VerticalAlignment="Center"
                               FontSize="11"
                               Opacity="0.6"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- 🔹 PROJECTS TAB -->
            <TabItem Header="Projects">
                <Border Background="#FF1E1E1E"
                        BorderBrush="#FF333333"
                        BorderThickness="1"
                        Padding="6">
                    <TabControl Background="#FF1E1E1E"
                                BorderThickness="0"
                                Margin="0">

                        <TabItem Header="Projects">
                            <Grid Background="#FF1E1E1E" Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <!-- LEFT: Project list -->
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Filter toolbar -->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,6"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Filter:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>

                                        <Button Content="All"
                                                Margin="0,0,4,0"
                                                Padding="8,3"
                                                Click="ShowAllProjects_Click"/>

                                        <Button Content="Active"
                                                Margin="0,0,4,0"
                                                Padding="8,3"
                                                Click="ShowActiveProjects_Click"/>

                                        <Button Content="Inactive"
                                                Margin="0,0,4,0"
                                                Padding="8,3"
                                                Click="ShowInactiveProjects_Click"/>
                                    </StackPanel>

                                    <!-- Projects grid -->
                                    <DataGrid x:Name="ProjectsGrid"
                                              Grid.Row="1"
                                              ItemsSource="{Binding ProjectView}"
                                              Style="{StaticResource DarkDataGridStyle}"
                                              AutoGenerateColumns="False"
                                              SelectionMode="Single"
                                              SelectionChanged="ProjectsGrid_SelectionChanged">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Job" Binding="{Binding JobNameOrNumber}" Width="*"/>
                                            <DataGridTextColumn Header="Code" Binding="{Binding BaseCode}" Width="50"/>
                                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="40" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Labour" Binding="{Binding LabourCost, StringFormat=£{0:N2}}" Width="100"/>
                                            <DataGridTextColumn Header="Sub-Contractor" Binding="{Binding SupplierCost, StringFormat=£{0:N2}}" Width="100" IsReadOnly="True" />
                                            <DataGridTextColumn Header="Total Cost" Binding="{Binding TotalCost, StringFormat=£{0:N2}}" Width="100" IsReadOnly="True" />
                                            <DataGridTextColumn Header="Invoiced Net" Binding="{Binding InvoicedNet, StringFormat=£{0:N2}}" Width="100"/>
                                            <DataGridTextColumn Header="Profit Net" Binding="{Binding ProfitNet, StringFormat=£{0:N2}}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>

                                <!-- RIGHT: Selected project details -->
                                <Grid Grid.Column="1" Margin="12,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Left: title + meta -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       Text="{Binding SelectedProject.JobNameOrNumber}"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Foreground="#FFBFBFBF"
                                                           Text="{Binding SelectedProject.BaseCode, StringFormat=Code: {0}}"
                                                           Margin="0,0,12,0"/>
                                            </StackPanel>

                                            <TextBlock Foreground="#FFBFBFBF"
                                                       Text="{Binding SelectedProject.ProfitNet, StringFormat=Profit (Net): £{0:N2}}"/>
                                        </StackPanel>

                                        <!-- Right: activate/deactivate -->
                                        <Button Grid.Column="1"
                                                Padding="12,6"
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Top"
                                                Click="ToggleProjectActive_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="Deactivate"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedProject.IsActive}" Value="False">
                                                            <Setter Property="Content" Value="Activate"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedProject}" Value="{x:Null}">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>

                                    <GroupBox Grid.Row="1" Header="Labour (this month)" Foreground="White">
                                        <DataGrid ItemsSource="{Binding SelectedProjectLabourThisMonth}"
                                                  Style="{StaticResource DarkDataGridStyle}"
                                                  AutoGenerateColumns="False"
                                                  IsReadOnly="True">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Init" Binding="{Binding WorkerInitials}" Width="70"/>
                                                <DataGridTextColumn Header="Name" Binding="{Binding WorkerName}" Width="*"/>
                                                <DataGridTextColumn Header="Hours" Binding="{Binding Hours, StringFormat={}{0:N2}}" Width="90"/>
                                                <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=£{0:N2}}" Width="110"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </GroupBox>

                                    <GroupBox Grid.Row="2" Header="Labour (all time)" Foreground="White" Margin="0,8,0,0">
                                        <DataGrid ItemsSource="{Binding SelectedProjectLabourAllTime}"
                                                  Style="{StaticResource DarkDataGridStyle}"
                                                  AutoGenerateColumns="False"
                                                  IsReadOnly="True">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Init" Binding="{Binding WorkerInitials}" Width="70"/>
                                                <DataGridTextColumn Header="Name" Binding="{Binding WorkerName}" Width="*"/>
                                                <DataGridTextColumn Header="Hours" Binding="{Binding Hours, StringFormat={}{0:N2}}" Width="90"/>
                                                <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=£{0:N2}}" Width="110"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </GroupBox>

                                    <GroupBox Grid.Row="3" Header="Invoices (this project)" Foreground="White" Margin="0,8,0,0">
                                        <DataGrid ItemsSource="{Binding SelectedProjectInvoices}"
                                                  Style="{StaticResource DarkDataGridStyle}"
                                                  AutoGenerateColumns="False"
                                                  IsReadOnly="True">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Invoice" Binding="{Binding InvoiceNumber}" Width="110"/>
                                                <DataGridTextColumn Header="Date" Binding="{Binding InvoiceDate, StringFormat=yyyy-MM-dd}" Width="110"/>
                                                <DataGridTextColumn Header="Due" Binding="{Binding DueDate, StringFormat=yyyy-MM-dd}" Width="110"/>
                                                <DataGridTextColumn Header="Net" Binding="{Binding NetAmount, StringFormat=£{0:N2}}" Width="110"/>
                                                <DataGridTextColumn Header="Outstanding" Binding="{Binding OutstandingNet, StringFormat=£{0:N2}}" Width="120"/>
                                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </GroupBox>

                                    <GroupBox Grid.Row="4" Header="Sub-Contractor costs (this project)" Foreground="White" Margin="0,8,0,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Input row -->
                                            <WrapPanel Grid.Row="0" Margin="8" VerticalAlignment="Top">
                                                <ComboBox Width="220"
                                                          Margin="0,0,8,8"
                                                          ItemsSource="{Binding Suppliers}"
                                                          SelectedItem="{Binding NewSupplierCostSupplier}"
                                                          DisplayMemberPath="Name"/>

                                                <DatePicker Width="140"
                                                            Margin="0,0,8,8"
                                                            SelectedDate="{Binding NewSupplierCostDate}"
                                                            IsEnabled="{Binding IsSupplierCostDateEnabled}"/>

                                                <CheckBox Content="Unknown date"
                                                          Margin="0,0,8,8"
                                                          VerticalAlignment="Center"
                                                          IsChecked="{Binding NewSupplierCostDateUnknown}"/>

                                                <TextBox Width="120"
                                                         Margin="0,0,8,8"
                                                         Text="{Binding NewSupplierCostAmountText, UpdateSourceTrigger=PropertyChanged}"
                                                         ToolTip="Amount (net)"/>

                                                <TextBox Width="260"
                                                         Margin="0,0,8,8"
                                                         Text="{Binding NewSupplierCostNote, UpdateSourceTrigger=PropertyChanged}"
                                                         ToolTip="Note (optional)"/>

                                                <!--<Button Content="Add"
                                                        Padding="14,6"
                                                        Margin="0,0,8,8"
                                                        Click="AddSupplierCost_Click"/>-->

                                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                    <Button Content="Add Cost" Margin="0,0,8,0" Click="AddSupplierCost_Click"/>
                                                    <Button Content="Edit Selected" Margin="0,0,8,0" Click="EditSelectedSupplierCost_Click"/>
                                                    <Button Content="Save Edit" Margin="0,0,8,0" Click="SaveSupplierCostEdit_Click"/>
                                                    <Button Content="Cancel" Margin="0,0,8,0" Click="CancelSupplierCostEdit_Click"/>
                                                    <Button Content="Delete Selected" Click="DeleteSelectedSupplierCost_Click"/>
                                                </StackPanel>
                                            </WrapPanel>

                                            <!-- Costs grid -->
                                            <DataGrid Grid.Row="1"
                                                      ItemsSource="{Binding SelectedProjectSupplierCosts}"
                                                      SelectionMode="Single"
                                                      SelectionChanged="SupplierCostsGrid_SelectionChanged"
                                                      Style="{StaticResource DarkDataGridStyle}"
                                                      AutoGenerateColumns="False"
                                                      IsReadOnly="True">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="*"/>
                                                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="110"/>
                                                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=£{0:N2}}" Width="120"/>
                                                    <DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="2*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </GroupBox>

                                    <GroupBox Grid.Row="5" Header="Recent labour entries" Foreground="White" Margin="0,8,0,0">
                                        <DataGrid ItemsSource="{Binding SelectedProjectRecentEntries}"
                                                  Style="{StaticResource DarkDataGridStyle}"
                                                  AutoGenerateColumns="False"
                                                  IsReadOnly="True">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="110"/>
                                                <DataGridTextColumn Header="Init" Binding="{Binding WorkerInitials}" Width="70"/>
                                                <DataGridTextColumn Header="Hours" Binding="{Binding Hours, StringFormat={}{0:N2}}" Width="90"/>
                                                <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=£{0:N2}}" Width="110"/>
                                                <DataGridTextColumn Header="Task" Binding="{Binding TaskDescription}" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </GroupBox>
                                </Grid>
                            </Grid>
                        </TabItem>

                        <!-- ADD PROJECT -->
                        <TabItem Header="Add Project">
                            <Grid Background="#FF1E1E1E" Margin="10">
                                <GroupBox Header="Add Project" Foreground="White">
                                    <StackPanel Margin="10" MaxWidth="560">

                                        <TextBlock Text="Creates a real project row. No inline edits; save is explicit."
                                                   Opacity="0.7"
                                                   Margin="0,0,0,12"
                                                   TextWrapping="Wrap"/>

                                        <!-- Consistent form layout (no WrapPanels for fields) -->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <!-- builder -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- preview -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- company -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- active -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- button -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- status -->
                                            </Grid.RowDefinitions>

                                            <!-- Job key builder -->
                                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                                <TextBlock Text="Job key builder"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,0,6"/>

                                                <Grid Margin="0,0,0,6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="90"/>
                                                        <ColumnDefinition Width="110"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Headers -->
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Prefix" Opacity="0.8" Margin="0,0,0,4"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Number" Opacity="0.8" Margin="0,0,0,4"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Job name" Opacity="0.8" Margin="0,0,0,4"/>

                                                    <!-- Inputs -->
                                                    <ComboBox Grid.Row="1" Grid.Column="0"
                                                              Height="28"
                                                              Width="70"
                                                              ItemsSource="{Binding ProjectPrefixOptions}"
                                                              SelectedItem="{Binding SelectedProjectPrefix}"
                                                              Margin="0,0,8,0"/>

                                                    <TextBox Grid.Row="1" Grid.Column="1"
                                                             Height="28"
                                                             Width="90"
                                                             Text="{Binding NewProjectNumberText, UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="Project number (e.g. 27 becomes 0027)"
                                                             Margin="0,0,8,0"/>

                                                    <TextBox Grid.Row="1" Grid.Column="2"
                                                             Height="28"
                                                             Text="{Binding NewProjectNameText, UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="Job name (Required) (e.g. DP, 25 SG)"/>

                                                    <!-- Helper text -->
                                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                                               Text="e.g. PN"
                                                               Opacity="0.6"
                                                               FontSize="11"
                                                               Margin="0,4,0,0"/>

                                                    <TextBlock Grid.Row="2" Grid.Column="1"
                                                               Text="e.g. 0027"
                                                               Opacity="0.6"
                                                               FontSize="11"
                                                               Margin="0,4,0,0"/>

                                                    <TextBlock Grid.Row="2" Grid.Column="2"
                                                               Text="e.g. DP / 25 SG"
                                                               Opacity="0.6"
                                                               FontSize="11"
                                                               Margin="0,4,0,0"/>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Preview (full width, feels like the outcome) -->
                                            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                                <TextBlock Text="Job key (Preview)"
                                                           Opacity="0.8"
                                                           Margin="0,0,0,4"/>
                                                <TextBox Height="30"
                                                         IsReadOnly="True"
                                                         Text="{Binding NewProjectJobNameText}"
                                                         Opacity="0.95"/>
                                            </StackPanel>

                                            <!-- Company (consistent with above-label form style) -->
                                            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                                                <TextBlock Text="Company"
                                                           Opacity="0.8"
                                                           Margin="0,0,0,4"/>
                                                <ComboBox Height="30"
                                                          IsEditable="True"
                                                          IsTextSearchEnabled="True"
                                                          StaysOpenOnEdit="True"
                                                          ItemsSource="{Binding Companies}"
                                                          SelectedItem="{Binding SelectedCompany, Mode=TwoWay}"
                                                          Text="{Binding NewProjectCompanyText, UpdateSourceTrigger=PropertyChanged}"
                                                          TextSearch.TextPath="Code"
                                                          ToolTip="Type a company code/name, or pick an existing one">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Code}" FontWeight="SemiBold"/>
                                                                <TextBlock Text="  —  " Opacity="0.6"/>
                                                                <TextBlock Text="{Binding Name}" Opacity="0.9"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                            </StackPanel>

                                            <!-- Active -->
                                            <StackPanel Grid.Row="3" Margin="0,0,0,14">
                                                <CheckBox Content="Active"
                                                          Foreground="#FFE0E0E0"
                                                          IsChecked="{Binding NewProjectIsActive}"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Button -->
                                            <Button Grid.Row="4"
                                                    Content="Add Project"
                                                    Width="140"
                                                    Padding="14,6"
                                                    HorizontalAlignment="Left"
                                                    Click="AddProject_Click"
                                                    IsEnabled="{Binding CanAddProject}"/>

                                            <!-- Status -->
                                            <TextBlock Grid.Row="5"
                                                       Text="{Binding AddProjectStatusText}"
                                                       Margin="0,10,0,0"
                                                       Opacity="0.85"
                                                       TextWrapping="Wrap"/>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                        </TabItem>

                        <!-- EDIT PROJECT -->
                        <TabItem Header="Edit Project">
                            <Grid Background="#FF1E1E1E" Margin="10">
                                <Border Background="#FF262626" CornerRadius="6" Padding="12">
                                    <TextBlock Text="Edit Project is coming next. Add Project is isolated from Edit Project logic."
                                               Opacity="0.8"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </Border>
            </TabItem>
            
            <!-- PEOPLE & SUPPLIERS TAB -->
            <TabItem Header="People &amp; Sub-Contractors">
                <Border Background="#FF1E1E1E"
                        BorderBrush="#FF333333"
                        BorderThickness="1"
                        Padding="6">
                    <TabControl Background="#FF1E1E1E"
                                BorderThickness="0"
                                Margin="0">

                        <!-- PEOPLE (now contains its own sub-tabs) -->
                        <TabItem Header="People">
                            <TabControl Background="#FF1E1E1E"
                                        BorderThickness="0">

                                <!-- PEOPLE LIST + DRILLDOWN (existing content moved here) -->
                                <TabItem Header="People">
                                    <Grid Background="#FF1E1E1E" Margin="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- LEFT: People list -->
                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Filter toolbar (same as Projects tab) -->
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,6"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="Filter:"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>

                                                <Button Content="All"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowAllPeople_Click"/>

                                                <Button Content="Active"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowActivePeople_Click"/>

                                                <Button Content="Inactive"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowInactivePeople_Click"/>
                                            </StackPanel>

                                            <!-- People grid -->
                                            <DataGrid x:Name="PeopleGrid"
                                                      Grid.Row="1"
                                                      ItemsSource="{Binding PeopleView}"
                                                      Style="{StaticResource DarkDataGridStyle}"
                                                      AutoGenerateColumns="False"
                                                      SelectionMode="Single"
                                                      SelectionChanged="PeopleGrid_SelectionChanged">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Initials" Binding="{Binding Initials}" Width="90"/>
                                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="220"/>

                                                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70" IsReadOnly="True"/>

                                                    <DataGridTextColumn Header="Current Rate" Width="120"
                                                                        Binding="{Binding CurrentRatePerHour, StringFormat=£{0:N2}}"/>
                                                    <DataGridTextColumn Header="Last Worked" Width="120"
                                                                        Binding="{Binding LastWorkedDate, StringFormat=yyyy-MM-dd}"/>
                                                    <DataGridTextColumn Header="Hours (This Month)" Width="140"
                                                                        Binding="{Binding HoursThisMonth, StringFormat={}{0:N2}}"/>
                                                    <DataGridTextColumn Header="Cost (This Month)" Width="140"
                                                                        Binding="{Binding CostThisMonth, StringFormat=£{0:N2}}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>

                                        <!-- RIGHT: Selected person details -->
                                        <Grid Grid.Column="1" Margin="12,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           Text="{Binding SelectedPerson.Name}"
                                                           VerticalAlignment="Center"/>

                                                <Button Grid.Column="1"
                                                        Padding="12,6"
                                                        Margin="12,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Click="TogglePersonActive_Click">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Content" Value="Deactivate"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding SelectedPerson.IsActive}" Value="False">
                                                                    <Setter Property="Content" Value="Activate"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding SelectedPerson}" Value="{x:Null}">
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>

                                            <!-- Rate history -->
                                            <GroupBox Grid.Row="1" Header="Rate history" Margin="0,0,0,8">
                                                <DataGrid ItemsSource="{Binding SelectedPersonRates}"
                                                          Style="{StaticResource DarkDataGridStyle}"
                                                          AutoGenerateColumns="False"
                                                          IsReadOnly="True">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Valid From" Binding="{Binding ValidFrom, StringFormat=yyyy-MM-dd}" Width="120"/>
                                                        <DataGridTextColumn Header="Valid To" Binding="{Binding ValidTo, StringFormat=yyyy-MM-dd}" Width="120"/>
                                                        <DataGridTextColumn Header="Rate" Binding="{Binding RatePerHour, StringFormat=£{0:N2}}" Width="120"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </GroupBox>

                                            <!-- This month by project -->
                                            <GroupBox Grid.Row="2" Header="This month by project" Margin="0,0,0,8">
                                                <DataGrid ItemsSource="{Binding SelectedPersonProjects}"
                                                          Style="{StaticResource DarkDataGridStyle}"
                                                          AutoGenerateColumns="False"
                                                          IsReadOnly="True">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Project" Binding="{Binding ProjectLabel}" Width="*"/>
                                                        <DataGridTextColumn Header="Code" Binding="{Binding ProjectCode}" Width="90"/>
                                                        <DataGridTextColumn Header="Hours" Binding="{Binding Hours, StringFormat={}{0:N2}}" Width="90"/>
                                                        <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=£{0:N2}}" Width="110"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </GroupBox>

                                            <!-- Recent entries -->
                                            <GroupBox Grid.Row="3" Header="Recent entries">
                                                <DataGrid ItemsSource="{Binding SelectedPersonRecentEntries}"
                                                          Style="{StaticResource DarkDataGridStyle}"
                                                          AutoGenerateColumns="False"
                                                          IsReadOnly="True">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="110"/>
                                                        <DataGridTextColumn Header="Project" Binding="{Binding ProjectLabel}" Width="*"/>
                                                        <DataGridTextColumn Header="Hours" Binding="{Binding Hours, StringFormat={}{0:N2}}" Width="80"/>
                                                        <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=£{0:N2}}" Width="100"/>
                                                        <DataGridTextColumn Header="Task" Binding="{Binding TaskDescription}" Width="240"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </GroupBox>

                                            <!-- Portal access -->
                                            <GroupBox Grid.Row="4" Header="Portal Access" Margin="0,8,0,0">
                                                <StackPanel Margin="10">

                                                    <TextBlock Text="{Binding PortalAccessStatusText}" Opacity="0.8" Margin="0,0,0,8"/>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Username:" Width="80" VerticalAlignment="Center"/>
                                                        <TextBox Width="220"
                                                                 Text="{Binding PortalUsernameText, UpdateSourceTrigger=PropertyChanged}"
                                                                 IsEnabled="{Binding CanEditPortalUsername}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Role:" Width="80" VerticalAlignment="Center"/>
                                                        <ComboBox Width="220"
                                                                  ItemsSource="{Binding PortalRoleOptions}"
                                                                  SelectedItem="{Binding SelectedPortalRole}"
                                                                  IsEnabled="{Binding HasPortalAccount}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,12">
                                                        <TextBlock Text="Active:" Width="80" VerticalAlignment="Center"/>
                                                        <CheckBox IsChecked="{Binding PortalIsActive}"
                                                                  IsEnabled="{Binding HasPortalAccount}"
                                                                  VerticalAlignment="Center"/>
                                                    </WrapPanel>

                                                    <WrapPanel>
                                                        <Button Content="Create Account"
                                                                Margin="0,0,8,0"
                                                                Click="CreatePortalAccount_Click"
                                                                IsEnabled="{Binding CanCreatePortalAccount}"/>
                                                        <Button Content="Save Changes"
                                                                Margin="0,0,8,0"
                                                                Click="SavePortalAccess_Click"
                                                                IsEnabled="{Binding HasPortalAccount}"/>
                                                        <Button Content="Reset Password"
                                                                Click="ResetPortalPassword_Click"
                                                                IsEnabled="{Binding HasPortalAccount}"/>
                                                    </WrapPanel>

                                                    <TextBlock Text="{Binding PortalTempPasswordText}"
                                                               Margin="0,10,0,0"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </GroupBox>
                                        </Grid>
                                    </Grid>
                                </TabItem>

                                <!-- EDIT PERSON -->
                                <TabItem Header="Edit Person">
                                    <Grid Background="#FF1E1E1E" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header -->
                                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                            <TextBlock Text="Edit Person"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                            <TextBlock Opacity="0.7"
                                                       Text="Edits are explicit and saved via the API. The People drilldown remains read-only."/>
                                        </StackPanel>

                                        <!-- If no selection -->
                                        <Border Grid.Row="1"
                                                Background="#FF262626"
                                                CornerRadius="6"
                                                Padding="10"
                                                Margin="0,0,0,10">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedPerson}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <TextBlock Text="Select a person in the People list first."
                                                       Foreground="White"
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Main editor (2-column layout to use space better) -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="420"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Left: Person details -->
                                            <GroupBox Grid.Column="0" Header="Person details" Margin="0,0,10,0">
                                                <StackPanel Margin="10">

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Worker ID:" Width="110" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding SelectedPerson.WorkerId}" VerticalAlignment="Center" Opacity="0.9"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Initials:" Width="110" VerticalAlignment="Center"/>
                                                        <TextBox Width="260"
                                                                 Text="{Binding EditPersonInitialsText, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Name:" Width="110" VerticalAlignment="Center"/>
                                                        <TextBox Width="260"
                                                                 Text="{Binding EditPersonNameText, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,12">
                                                        <TextBlock Text="Signature name:" Width="110" VerticalAlignment="Center"/>
                                                        <TextBox Width="260"
                                                                 Text="{Binding EditPersonSignatureNameText, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <Button Content="Reload"
                                                                Margin="0,0,8,0"
                                                                Padding="14,6"
                                                                Click="ReloadEditPerson_Click"/>
                                                        <Button Content="Save details"
                                                                Padding="14,6"
                                                                Click="SavePersonDetails_Click"/>
                                                    </WrapPanel>

                                                    <TextBlock Text="{Binding EditPersonStatusText}"
                                                               Margin="0,6,0,0"
                                                               Opacity="0.85"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </GroupBox>

                                            <!-- Right: Rate editor -->
                                            <GroupBox Grid.Column="1" Header="Rate history editor">
                                                <Grid Margin="10">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Help text -->
                                                    <TextBlock Grid.Row="0"
                                                               Opacity="0.75"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,8">
                                                               Rates use an effective-from timeline: “Valid From” is inclusive (first day it applies). “Valid To” is exclusive (first day it no longer applies). There must be no overlaps, and only one open-ended current rate.
                                                    </TextBlock>

                                                    <!-- Rates list -->
                                                    <DataGrid Grid.Row="1"
                                                              ItemsSource="{Binding EditPersonRates}"
                                                              SelectedItem="{Binding SelectedEditPersonRate, Mode=TwoWay}"
                                                              Style="{StaticResource DarkDataGridStyle}"
                                                              AutoGenerateColumns="False"
                                                              IsReadOnly="True"
                                                              Height="240"
                                                              Margin="0,0,0,10"
                                                              SelectionUnit="FullRow"
                                                              SelectionMode="Single">
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Header="Valid From (first day this rate applies)" Binding="{Binding ValidFrom, StringFormat=yyyy-MM-dd}" Width="320"/>
                                                            <DataGridTextColumn Header="Valid To (first day this rate does NOT apply)" Binding="{Binding ValidTo, StringFormat=yyyy-MM-dd}" Width="320"/>
                                                            <DataGridTextColumn Header="Rate" Binding="{Binding RatePerHour, StringFormat=£{0:N2}}" Width="120"/>
                                                        </DataGrid.Columns>
                                                    </DataGrid>

                                                    <!-- Two-up panels: schedule new / add historical -->
                                                    <Grid Grid.Row="2" Margin="0,0,0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Schedule new rate -->
                                                        <Border Grid.Column="0" Background="#FF262626" CornerRadius="6" Padding="10" Margin="0,0,8,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Schedule new rate (effective from)"
                                                                           FontWeight="SemiBold"
                                                                           Margin="0,0,0,2"/>
                                                                <TextBlock Text="Creates a new ongoing rate starting on the date below. The previous current rate will end on that date (exclusive)."
                                                                           Opacity="0.75"
                                                                           TextWrapping="Wrap"
                                                                           Margin="0,0,0,8"/>

                                                                <WrapPanel Margin="0,0,0,8">
                                                                    <TextBlock Text="Effective from:" Width="120" VerticalAlignment="Center"/>
                                                                    <DatePicker SelectedDate="{Binding ChangeCurrentEffectiveFrom}"/>
                                                                </WrapPanel>

                                                                <WrapPanel Margin="0,0,0,8">
                                                                    <TextBlock Text="New £/hr:" Width="120" VerticalAlignment="Center"/>
                                                                    <TextBox Width="140"
                                                                             Text="{Binding ChangeCurrentRateText, UpdateSourceTrigger=PropertyChanged}"/>
                                                                </WrapPanel>

                                                                <Button Content="Schedule new rate"
                                                                        Padding="14,6"
                                                                        Click="ChangeCurrentRate_Click"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- Add historical rate -->
                                                        <Border Grid.Column="1" Background="#FF262626" CornerRadius="6" Padding="10" Margin="8,0,0,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Add historical rate (fixed range)"
                                                                           FontWeight="SemiBold"
                                                                           Margin="0,0,0,2"/>
                                                                <TextBlock Text="Use for past corrections only. “Valid To” is the first day the rate stops applying (exclusive)."
                                                                           Opacity="0.75"
                                                                           TextWrapping="Wrap"
                                                                           Margin="0,0,0,8"/>

                                                                <WrapPanel Margin="0,0,0,8">
                                                                    <TextBlock Text="Valid from:" Width="120" VerticalAlignment="Center"/>
                                                                    <DatePicker SelectedDate="{Binding AddRateValidFrom}"/>
                                                                </WrapPanel>

                                                                <WrapPanel Margin="0,0,0,8">
                                                                    <TextBlock Text="Valid to:" Width="120" VerticalAlignment="Center"/>
                                                                    <DatePicker SelectedDate="{Binding AddRateValidTo}"/>
                                                                </WrapPanel>

                                                                <TextBlock TextWrapping="Wrap"
                                                                           FontStyle="Italic"
                                                                           Opacity="0.65"
                                                                           Margin="0,0,0,10">
                                                                           Example: If a new rate starts on 09/01/2026,
                                                                           the previous rate’s Valid To should be 09/01/2026.
                                                                </TextBlock>

                                                                <WrapPanel Margin="0,0,0,8">
                                                                    <TextBlock Text="Rate £/hr:" Width="120" VerticalAlignment="Center"/>
                                                                    <TextBox Width="140"
                                                                             Text="{Binding AddRateAmountText, UpdateSourceTrigger=PropertyChanged}"/>
                                                                </WrapPanel>

                                                                <Button Content="Add historical rate"
                                                                        Padding="14,6"
                                                                        Click="AddHistoricalRate_Click"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>

                                                    <!-- Correct selected rate -->
                                                    <Border Grid.Row="3" Background="#FF262626" CornerRadius="6" Padding="10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0">
                                                                <TextBlock Text="Correct selected rate amount"
                                                                           FontWeight="SemiBold"
                                                                           Margin="0,0,0,2"/>
                                                                <TextBlock Text="Edits the £/hr only. Dates do not change and no automatic re-timing is applied."
                                                                           Opacity="0.75"
                                                                           TextWrapping="Wrap"
                                                                           Margin="0,0,0,8"/>

                                                                <WrapPanel Margin="0,0,0,8">
                                                                    <TextBlock Text="New £/hr:" Width="120" VerticalAlignment="Center"/>
                                                                    <TextBox Width="140"
                                                                             Text="{Binding UpdateSelectedRateAmountText, UpdateSourceTrigger=PropertyChanged}"/>
                                                                </WrapPanel>

                                                                <TextBlock Text="{Binding EditRatesStatusText}"
                                                                           Margin="0,6,0,0"
                                                                           Opacity="0.85"
                                                                           TextWrapping="Wrap"/>
                                                            </StackPanel>

                                                            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Top">
                                                                <Button Content="Update amount"
                                                                        Margin="0,0,0,8"
                                                                        Padding="14,6"
                                                                        Click="UpdateSelectedRateAmount_Click"/>
                                                                <Button Content="Delete rate"
                                                                        Padding="14,6"
                                                                        Click="DeleteSelectedRate_Click"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>

                                                </Grid>
                                            </GroupBox>
                                        </Grid>
                                    </Grid>
                                </TabItem>

                                <!-- ADD PERSON (moved under People) -->
                                <TabItem Header="Add Person">
                                    <Grid Background="#FF1E1E1E" Margin="10">
                                        <GroupBox Header="Add Person" Foreground="White">
                                            <StackPanel Margin="10" MaxWidth="420">

                                                <WrapPanel Margin="0,0,0,8">
                                                    <TextBlock Text="Initials:" Width="90" VerticalAlignment="Center"/>
                                                    <TextBox Width="260"
                                                             Text="{Binding NewWorkerInitialsText, UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="e.g. JD"/>
                                                </WrapPanel>

                                                <WrapPanel Margin="0,0,0,8">
                                                    <TextBlock Text="Name:" Width="90" VerticalAlignment="Center"/>
                                                    <TextBox Width="260"
                                                             Text="{Binding NewWorkerNameText, UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="Full name"/>
                                                </WrapPanel>

                                                <WrapPanel Margin="0,0,0,8">
                                                    <TextBlock Text="Rate (£/hr):" Width="90" VerticalAlignment="Center"/>
                                                    <TextBox Width="260"
                                                             Text="{Binding NewWorkerRateText, UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="e.g. 25.00"/>
                                                </WrapPanel>

                                                <WrapPanel Margin="0,0,0,12">
                                                    <TextBlock Text="Active:" Width="90" VerticalAlignment="Center"/>
                                                    <CheckBox IsChecked="{Binding NewWorkerIsActive}"
                                                              VerticalAlignment="Center"/>
                                                </WrapPanel>

                                                <WrapPanel>
                                                    <Button Content="Add Person"
                                                            Padding="14,6"
                                                            Click="AddWorker_Click"/>
                                                </WrapPanel>

                                                <TextBlock Text="{Binding AddWorkerStatusText}"
                                                           Margin="0,10,0,0"
                                                           Opacity="0.85"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </GroupBox>
                                    </Grid>
                                </TabItem>
