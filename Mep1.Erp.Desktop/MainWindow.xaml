                                                </Grid>

                                                <!-- Row 3: Agreed Date + Actual -->
                                                <Grid Grid.Row="3" Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                        <ColumnDefinition Width="24"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Agreed Date (optional)" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <DatePicker Grid.Column="1" Height="28"
                                                                SelectedDate="{Binding AddCcf_AgreedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                    <TextBlock Grid.Column="3" Text="Actual (£)" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBox Grid.Column="4" Height="28"
                                                             Text="{Binding AddCcf_ActualValueText, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <!-- Notes -->
                                                <Grid Grid.Row="4" Margin="0,0,0,10">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" Text="Notes" Foreground="#FFBFBFBF" Margin="0,0,0,6"/>
                                                    <TextBox Grid.Row="1"
                                                             Height="80"
                                                             TextWrapping="Wrap"
                                                             AcceptsReturn="True"
                                                             Text="{Binding AddCcf_Notes, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <!-- Buttons + status -->
                                                <StackPanel Grid.Row="5">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Save" Padding="12,5" IsEnabled="{Binding CanSaveAddCcf}" Click="AddCcf_Save_Click"/>
                                                        <Button Content="Clear" Padding="12,5" Margin="10,0,0,0" Click="AddCcf_Clear_Click"/>
                                                    </StackPanel>

                                                    <TextBlock Text="{Binding AddCcf_StatusText}"
                                                               Margin="0,10,0,0"
                                                               Opacity="0.85"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </TabItem>

                                <!-- EDIT CCF REF -->
                                <TabItem Header="Edit CCF Ref">
                                    <Grid Margin="12">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Project picker -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBlock Text="Project"
                                                       VerticalAlignment="Center"
                                                       Foreground="#FFBFBFBF"
                                                       Margin="0,0,8,0"/>

                                            <ComboBox Width="220"
                                                      Height="28"
                                                      ItemsSource="{Binding ProjectSummaries}"
                                                      SelectedItem="{Binding SelectedProjectForCcf, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      DisplayMemberPath="JobNameOrNumber"/>

                                            <TextBlock Text="CCF"
                                                       VerticalAlignment="Center"
                                                       Foreground="#FFBFBFBF"
                                                       Margin="14,0,8,0"/>

                                            <TextBox Width="80"
                                                     Height="28"
                                                     IsReadOnly="True"
                                                     Text="{Binding EditCcf_Code}"
                                                     Opacity="0.85"/>
                                        </StackPanel>

                                        <!-- Form -->
                                        <Border Grid.Row="1" Background="#FF262626" CornerRadius="6" Padding="12">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Row 0: Status -->
                                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                        <ColumnDefinition Width="24"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Status" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <ComboBox Grid.Column="1" Height="28"
                                                              ItemsSource="{Binding CcfStatuses}"
                                                              SelectedItem="{Binding EditCcf_Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <!-- Row 1: Estimated + Applied -->
                                                <Grid Grid.Row="1" Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                        <ColumnDefinition Width="24"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Estimated (£)" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBox Grid.Column="1" Height="28"
                                                             Text="{Binding EditCcf_EstimatedValueText, UpdateSourceTrigger=PropertyChanged}"/>

                                                    <TextBlock Grid.Column="3" Text="Applied (£)" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBox Grid.Column="4" Height="28"
                                                             Text="{Binding EditCcf_QuotedValueText, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <!-- Row 2: Applied Date + Agreed -->
                                                <Grid Grid.Row="2" Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                        <ColumnDefinition Width="24"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Applied Date (optional)" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <DatePicker Grid.Column="1" Height="28"
                                                                SelectedDate="{Binding EditCcf_QuotedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                    <TextBlock Grid.Column="3" Text="Agreed (£)" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBox Grid.Column="4" Height="28"
                                                             Text="{Binding EditCcf_AgreedValueText, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <!-- Row 3: Agreed Date + Actual -->
                                                <Grid Grid.Row="3" Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                        <ColumnDefinition Width="24"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="220"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Agreed Date (optional)" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <DatePicker Grid.Column="1" Height="28"
                                                                SelectedDate="{Binding EditCcf_AgreedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                                    <TextBlock Grid.Column="3" Text="Actual (£)" Foreground="#FFBFBFBF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                    <TextBox Grid.Column="4" Height="28"
                                                             Text="{Binding EditCcf_ActualValueText, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <!-- Notes -->
                                                <Grid Grid.Row="4" Margin="0,0,0,10">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" Text="Notes" Foreground="#FFBFBFBF" Margin="0,0,0,6"/>
                                                    <TextBox Grid.Row="1"
                                                             Height="80"
                                                             TextWrapping="Wrap"
                                                             AcceptsReturn="True"
                                                             Text="{Binding EditCcf_Notes, UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <!-- Buttons + status -->
                                                <StackPanel Grid.Row="5">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Save" Padding="12,5" IsEnabled="{Binding CanSaveEditCcf}" Click="EditCcf_Save_Click"/>
                                                        <Button Content="Cancel" Padding="12,5" Margin="10,0,0,0" Click="EditCcf_Cancel_Click"/>
                                                    </StackPanel>

                                                    <TextBlock Text="{Binding EditCcf_StatusText}"
                                                               Margin="0,10,0,0"
                                                               Opacity="0.85"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </TabItem>
                    </TabControl>
                </Border>
            </TabItem>
            
            <!-- PEOPLE & SUPPLIERS TAB -->
            <TabItem Header="People &amp; Sub-Contractors">
                <Border Background="#FF1E1E1E"
                        BorderBrush="#FF333333"
                        BorderThickness="1"
                        Padding="6">
                    <TabControl Background="#FF1E1E1E"
                                BorderThickness="0"
                                Margin="0">

                        <!-- PEOPLE (now contains its own sub-tabs) -->
                        <TabItem Header="People">
                            <TabControl Background="#FF1E1E1E"
                                        BorderThickness="0">

                                <!-- PEOPLE LIST + DRILLDOWN (existing content moved here) -->
                                <TabItem Header="People">
                                    <Grid Background="#FF1E1E1E" Margin="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- LEFT: People list -->
                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Filter toolbar (same as Projects tab) -->
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,6"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="Filter:"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>

                                                <Button Content="All"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowAllPeople_Click"/>

                                                <Button Content="Active"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowActivePeople_Click"/>

                                                <Button Content="Inactive"
                                                        Margin="0,0,4,0"
                                                        Padding="8,3"
                                                        Click="ShowInactivePeople_Click"/>
                                            </StackPanel>

                                            <!-- People grid -->
                                            <DataGrid x:Name="PeopleGrid"
                                                      Grid.Row="1"
                                                      ItemsSource="{Binding PeopleView}"
                                                      Style="{StaticResource DarkDataGridStyle}"
                                                      AutoGenerateColumns="False"
                                                      SelectionMode="Single"
                                                      SelectionChanged="PeopleGrid_SelectionChanged">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Initials" Binding="{Binding Initials}" Width="90"/>
                                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="220"/>

                                                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70" IsReadOnly="True"/>

                                                    <DataGridTextColumn Header="Current Rate" Width="120"
                                                                        Binding="{Binding CurrentRatePerHour, StringFormat=£{0:N2}}"/>
                                                    <DataGridTextColumn Header="Last Worked" Width="120"
                                                                        Binding="{Binding LastWorkedDate, StringFormat=yyyy-MM-dd}"/>
                                                    <DataGridTextColumn Header="Hours (This Month)" Width="140"
                                                                        Binding="{Binding HoursThisMonth, StringFormat={}{0:N2}}"/>
                                                    <DataGridTextColumn Header="Cost (This Month)" Width="140"
                                                                        Binding="{Binding CostThisMonth, StringFormat=£{0:N2}}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>

                                        <!-- RIGHT: Selected person details -->
                                        <Grid Grid.Column="1" Margin="12,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           Text="{Binding SelectedPerson.Name}"
                                                           VerticalAlignment="Center"/>

                                                <Button Grid.Column="1"
                                                        Padding="12,6"
                                                        Margin="12,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Click="TogglePersonActive_Click">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Content" Value="Deactivate"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding SelectedPerson.IsActive}" Value="False">
                                                                    <Setter Property="Content" Value="Activate"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding SelectedPerson}" Value="{x:Null}">
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>

                                            <!-- Rate history -->
                                            <GroupBox Grid.Row="1" Header="Rate history" Margin="0,0,0,8">
                                                <DataGrid ItemsSource="{Binding SelectedPersonRates}"
                                                          Style="{StaticResource DarkDataGridStyle}"
                                                          AutoGenerateColumns="False"
                                                          IsReadOnly="True">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Valid From" Binding="{Binding ValidFrom, StringFormat=yyyy-MM-dd}" Width="120"/>
                                                        <DataGridTextColumn Header="Valid To" Binding="{Binding ValidTo, StringFormat=yyyy-MM-dd}" Width="120"/>
                                                        <DataGridTextColumn Header="Rate" Binding="{Binding RatePerHour, StringFormat=£{0:N2}}" Width="120"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </GroupBox>

                                            <!-- This month by project -->
                                            <GroupBox Grid.Row="2" Header="This month by project" Margin="0,0,0,8">
                                                <DataGrid ItemsSource="{Binding SelectedPersonProjects}"
                                                          Style="{StaticResource DarkDataGridStyle}"
                                                          AutoGenerateColumns="False"
                                                          IsReadOnly="True">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Project" Binding="{Binding ProjectLabel}" Width="*"/>
                                                        <DataGridTextColumn Header="Code" Binding="{Binding ProjectCode}" Width="90"/>
                                                        <DataGridTextColumn Header="Hours" Binding="{Binding Hours, StringFormat={}{0:N2}}" Width="90"/>
                                                        <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=£{0:N2}}" Width="110"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </GroupBox>

                                            <!-- Recent entries -->
                                            <GroupBox Grid.Row="3" Header="Recent entries">
                                                <DataGrid ItemsSource="{Binding SelectedPersonRecentEntries}"
                                                          Style="{StaticResource DarkDataGridStyle}"
                                                          AutoGenerateColumns="False"
                                                          IsReadOnly="True">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="110"/>
                                                        <DataGridTextColumn Header="Project" Binding="{Binding ProjectLabel}" Width="*"/>
                                                        <DataGridTextColumn Header="Hours" Binding="{Binding Hours, StringFormat={}{0:N2}}" Width="80"/>
                                                        <DataGridTextColumn Header="Cost" Binding="{Binding Cost, StringFormat=£{0:N2}}" Width="100"/>
                                                        <DataGridTextColumn Header="Task" Binding="{Binding TaskDescription}" Width="240"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </GroupBox>

                                            <!-- Portal access -->
                                            <GroupBox Grid.Row="4" Header="Portal Access" Margin="0,8,0,0">
                                                <StackPanel Margin="10">

                                                    <TextBlock Text="{Binding PortalAccessStatusText}" Opacity="0.8" Margin="0,0,0,8"/>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Username:" Width="80" VerticalAlignment="Center"/>
                                                        <TextBox Width="220"
                                                                 Text="{Binding PortalUsernameText, UpdateSourceTrigger=PropertyChanged}"
                                                                 IsEnabled="{Binding CanEditPortalUsername}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Role:" Width="80" VerticalAlignment="Center"/>
                                                        <ComboBox Width="220"
                                                                  ItemsSource="{Binding PortalRoleOptions}"
                                                                  SelectedItem="{Binding SelectedPortalRole}"
                                                                  IsEnabled="{Binding HasPortalAccount}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,12">
                                                        <TextBlock Text="Active:" Width="80" VerticalAlignment="Center"/>
                                                        <CheckBox IsChecked="{Binding PortalIsActive}"
                                                                  IsEnabled="{Binding HasPortalAccount}"
                                                                  VerticalAlignment="Center"/>
                                                    </WrapPanel>

                                                    <WrapPanel>
                                                        <Button Content="Create Account"
                                                                Margin="0,0,8,0"
                                                                Click="CreatePortalAccount_Click"
                                                                IsEnabled="{Binding CanCreatePortalAccount}"/>
                                                        <Button Content="Save Changes"
                                                                Margin="0,0,8,0"
                                                                Click="SavePortalAccess_Click"
                                                                IsEnabled="{Binding HasPortalAccount}"/>
                                                        <Button Content="Reset Password"
                                                                Click="ResetPortalPassword_Click"
                                                                IsEnabled="{Binding HasPortalAccount}"/>
                                                    </WrapPanel>

                                                    <TextBlock Text="{Binding PortalTempPasswordText}"
                                                               Margin="0,10,0,0"
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </GroupBox>
                                        </Grid>
                                    </Grid>
                                </TabItem>

                                <!-- EDIT PERSON -->
                                <TabItem Header="Edit Person">
                                    <Grid Background="#FF1E1E1E" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header -->
                                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                            <TextBlock Text="Edit Person"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                            <TextBlock Opacity="0.7"
                                                       Text="Edits are explicit and saved via the API. The People drilldown remains read-only."/>
                                        </StackPanel>

                                        <!-- If no selection -->
                                        <Border Grid.Row="1"
                                                Background="#FF262626"
                                                CornerRadius="6"
                                                Padding="10"
                                                Margin="0,0,0,10">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedPerson}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <TextBlock Text="Select a person in the People list first."
                                                       Foreground="White"
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Main editor (2-column layout to use space better) -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="420"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Left: Person details -->
                                            <GroupBox Grid.Column="0" Header="Person details" Margin="0,0,10,0">
                                                <StackPanel Margin="10">

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Worker ID:" Width="110" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding SelectedPerson.WorkerId}" VerticalAlignment="Center" Opacity="0.9"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Initials:" Width="110" VerticalAlignment="Center"/>
                                                        <TextBox Width="260"
                                                                 Text="{Binding EditPersonInitialsText, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <TextBlock Text="Name:" Width="110" VerticalAlignment="Center"/>
                                                        <TextBox Width="260"
                                                                 Text="{Binding EditPersonNameText, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,12">
                                                        <TextBlock Text="Signature name:" Width="110" VerticalAlignment="Center"/>
                                                        <TextBox Width="260"
                                                                 Text="{Binding EditPersonSignatureNameText, UpdateSourceTrigger=PropertyChanged}"/>
                                                    </WrapPanel>

                                                    <WrapPanel Margin="0,0,0,8">
                                                        <Button Content="Reload"
                                                                Margin="0,0,8,0"
                                                                Padding="14,6"
                                                                Click="ReloadEditPerson_Click"/>
                                                        <Button Content="Save details"
                                                                Padding="14,6"
                                                                Click="SavePersonDetails_Click"/>
                                                    </WrapPanel>

                                                    <TextBlock Text="{Binding EditPersonStatusText}"
                                                               Margin="0,6,0,0"
                                                               Opacity="0.85"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </GroupBox>

                                            <!-- Right: Rate editor -->
                                            <GroupBox Grid.Column="1" Header="Rate history editor">
                                                <Grid Margin="10">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Help text -->
                                                    <TextBlock Grid.Row="0"
                                                               Opacity="0.75"
                                                               TextWrapping="Wrap"
                                                               Margin="0,0,0,8">
                                                               Rates use an effective-from timeline: “Valid From” is inclusive (first day it applies). “Valid To” is exclusive (first day it no longer applies). There must be no overlaps, and only one open-ended current rate.
                                                    </TextBlock>

                                                    <!-- Rates list -->
                                                    <DataGrid Grid.Row="1"
                                                              ItemsSource="{Binding EditPersonRates}"
                                                              SelectedItem="{Binding SelectedEditPersonRate, Mode=TwoWay}"
                                                              Style="{StaticResource DarkDataGridStyle}"
                                                              AutoGenerateColumns="False"
                                                              IsReadOnly="True"
                                                              Height="240"
                                                              Margin="0,0,0,10"
                                                              SelectionUnit="FullRow"
                                                              SelectionMode="Single">
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Header="Valid From (first day this rate applies)" Binding="{Binding ValidFrom, StringFormat=yyyy-MM-dd}" Width="320"/>
                                                            <DataGridTextColumn Header="Valid To (first day this rate does NOT apply)" Binding="{Binding ValidTo, StringFormat=yyyy-MM-dd}" Width="320"/>
                                                            <DataGridTextColumn Header="Rate" Binding="{Binding RatePerHour, StringFormat=£{0:N2}}" Width="120"/>
                                                        </DataGrid.Columns>
                                                    </DataGrid>

                                                    <!-- Two-up panels: schedule new / add historical -->
                                                    <Grid Grid.Row="2" Margin="0,0,0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Schedule new rate -->
                                                        <Border Grid.Column="0" Background="#FF262626" CornerRadius="6" Padding="10" Margin="0,0,8,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Schedule new rate (effective from)"
                                                                           FontWeight="SemiBold"
                                                                           Margin="0,0,0,2"/>
                                                                <TextBlock Text="Creates a new ongoing rate starting on the date below. The previous current rate will end on that date (exclusive)."
                                                                           Opacity="0.75"
                                                                           TextWrapping="Wrap"
                                                                           Margin="0,0,0,8"/>

                                                                <WrapPanel Margin="0,0,0,8">
                                                                    <TextBlock Text="Effective from:" Width="120" VerticalAlignment="Center"/>
                                                                    <DatePicker SelectedDate="{Binding ChangeCurrentEffectiveFrom}"/>
                                                                </WrapPanel>

                                                                <WrapPanel Margin="0,0,0,8">
                                                                    <TextBlock Text="New £/hr:" Width="120" VerticalAlignment="Center"/>
                                                                    <TextBox Width="140"
                                                                             Text="{Binding ChangeCurrentRateText, UpdateSourceTrigger=PropertyChanged}"/>
                                                                </WrapPanel>

                                                                <Button Content="Schedule new rate"
                                                                        Padding="14,6"
                                                                        Click="ChangeCurrentRate_Click"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- Add historical rate -->
                                                        <Border Grid.Column="1" Background="#FF262626" CornerRadius="6" Padding="10" Margin="8,0,0,0">
                                                            <StackPanel>
