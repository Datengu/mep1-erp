                                        <!-- Identity -->
                                        <DataGridTextColumn Header="Application No."
                                                            Binding="{Binding ApplicationNumber}"
                                                            Width="90"/>

                                        <DataGridTextColumn Header="Client"
                                                            Binding="{Binding ClientName}"
                                                            Width="170"/>

