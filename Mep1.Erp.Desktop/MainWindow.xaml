                                          SelectedItem="{Binding SelectedApplicationListItem}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          Style="{StaticResource DarkDataGridStyle}">

                                    <DataGrid.Resources>
                                        <!-- Scoped header style clone (same pattern as invoices) -->
                                        <Style x:Key="ApplicationsGridHeaderBaseStyle" TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#FF333333"/>
                                            <Setter Property="Foreground" Value="#FFE0E0E0"/>
                                            <Setter Property="BorderBrush" Value="#FF444444"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGrid.Resources>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Padding" Value="16,3,16,3"/>
                                        </Style>
                                    </DataGrid.CellStyle>

