<Window x:Class="Mep1.Erp.Desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MEP1BIM ERP - Admin Login"
        Width="420"
        SizeToContent="Height"
        MinHeight="280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF1E1E1E"
        Foreground="#FFE0E0E0">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Admin login"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,0,0,14"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Username" Opacity="0.8"/>
            <TextBox x:Name="UsernameTextBox"
                     Height="28"
                     Background="#FF262626"
                     Foreground="#FFE0E0E0"
                     BorderBrush="#FF444444"
                     Padding="8,3"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Password" Opacity="0.8"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="28"
                         Background="#FF262626"
                         Foreground="#FFE0E0E0"
                         BorderBrush="#FF444444"
                         Padding="8,3"/>
        </StackPanel>

        <TextBlock Grid.Row="3" x:Name="StatusText"
                   Opacity="0.85"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Cancel"
                    IsCancel="True"
                    Width="110"
                    Height="34"
                    Padding="12,6"
                    Margin="0,0,10,0"
                    Background="#FF303030"
                    Foreground="#FFE0E0E0"
                    BorderBrush="#FF444444"
                    Click="Cancel_Click"/>

            <Button x:Name="LoginButton"
                    Content="Login"
                    IsDefault="True"
                    Width="110"
                    Height="34"
                    Padding="12,6"
                    Background="#FF3A3A3A"
                    Foreground="White"
                    BorderBrush="#FF555555"
                    Click="Login_Click"/>
        </StackPanel>

    </Grid>
</Window>
