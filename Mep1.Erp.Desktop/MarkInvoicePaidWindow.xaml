<Window x:Class="Mep1.Erp.Desktop.MarkInvoicePaidWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mark invoice as paid"
        Width="420" Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E1E"
        Foreground="#FFE0E0E0">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Paid date" Margin="0,0,0,6"/>
        <DatePicker Grid.Row="1" x:Name="PaidDatePicker"/>

        <TextBlock Grid.Row="2" Text="Amount paid (this payment)" Margin="0,12,0,6"/>
        <TextBox Grid.Row="3" x:Name="AmountPaidTextBox"/>

        <TextBlock Grid.Row="4"
                   x:Name="ErrorText"
                   Margin="0,10,0,0"
                   Foreground="Tomato"
                   Visibility="Collapsed"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Save" Width="90" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
