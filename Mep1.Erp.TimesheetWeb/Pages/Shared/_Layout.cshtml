@using System.Security.Claims
@using System.Reflection
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEP1 BIM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mep1.Erp.TimesheetWeb.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16.png">
    <link rel="shortcut icon" href="~/favicon.ico">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/assets/logo.svg"
                         alt="MEP1BIM"
                         height="64"
                         class="d-inline-block align-text-middle" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @{
                            var isAuthed = User?.Identity?.IsAuthenticated == true;
                            var displayName = User?.FindFirst("display_name")?.Value
                            ?? User?.FindFirst("usr")?.Value
                            ?? "";
                        }

                        @if (!isAuthed)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Timesheet/Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Timesheet/EnterHours">Enter Hours</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Timesheet/History">History</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Timesheet/Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Timesheet/Logout">Logout</a>
                            </li>

                            @* Optional: show who is logged in *@
                            @if (!string.IsNullOrWhiteSpace(displayName))
                            {
                                <li class="nav-item ms-auto">
                                    <span class="navbar-text text-muted">Signed in as @displayName</span>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between">
            <span>
                &copy; @DateTime.UtcNow.Year - MEP1 BIM Ltd -
                <a asp-area="" asp-page="/Privacy">Privacy</a>
            </span>
            <span>
                v@(typeof(Program).Assembly.GetName().Version?.ToString() ?? "unknown")
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <div id="cookie-notice"
         style="display:none; position:fixed; bottom:0; left:0; right:0;
            background:#1e1e1e; color:#ffffff; padding:12px 16px;
            font-size:14px; z-index:1000; box-shadow:0 -2px 6px rgba(0,0,0,0.3);">

        <span>
            This site uses essential cookies required for authentication and security.
            See our <a href="/Privacy" style="color:#9ecbff; text-decoration:underline;">Privacy Policy</a> for details.
        </span>

        <button id="cookie-accept"
                style="margin-left:16px; padding:6px 12px; background:#007acc;
                   color:#fff; border:none; border-radius:4px; cursor:pointer;">
            OK
        </button>
    </div>

    <script>
        (function () {
            const key = "mep1_cookie_notice_accepted";
            const notice = document.getElementById("cookie-notice");
            const button = document.getElementById("cookie-accept");

            if (!localStorage.getItem(key)) {
                notice.style.display = "flex";
                notice.style.justifyContent = "space-between";
                notice.style.alignItems = "center";
            }

            button.addEventListener("click", function () {
                localStorage.setItem(key, "true");
                notice.style.display = "none";
            });
        })();
    </script>

</body>
</html>
