@page
@model Mep1.Erp.TimesheetWeb.Pages.Timesheet.EditModel
@{
    ViewData["Title"] = "Edit Entry";
}

<h2>Edit Timesheet Entry</h2>

<p>
    <a asp-page="/Timesheet/History">Back to History</a>
</p>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row g-3" style="max-width: 900px;">

        <div class="col-md-4">
            <label class="form-label">Date</label>
            <input class="form-control" type="date" asp-for="Input.Date" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
            <span class="text-danger" asp-validation-for="Input.Date"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Hours</label>
            <input id="hoursInput" class="form-control" type="number" step="0.5" min="0" max="24" list="hourOptions" asp-for="Input.Hours" />
            <datalist id="hourOptions">
                @for (decimal h = 0; h <= 24; h += 0.5m)
                {
                    <option value="@h.ToString("0.##")"></option>
                }
            </datalist>
            @if (Model.Input.Code == "HOL" || Model.Input.Code == "SI")
            {
                <div class="text-muted small">Holiday/Sick entries submit with 0 hours.</div>
            }
            <span class="text-danger" asp-validation-for="Input.Hours"></span>
        </div>

        <div class="col-md-8">
            <label class="form-label">Job</label>
            <select id="jobSelect" class="form-select" asp-for="Input.JobKey" asp-items="Model.ProjectOptions"></select>
            <span class="text-danger" asp-validation-for="Input.JobKey"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Code</label>
            <select id="codeSelect" class="form-select" asp-for="Input.Code" asp-items="Model.CodeOptions"></select>
            <span class="text-danger" asp-validation-for="Input.Code"></span>
        </div>

        <div class="mb-2"></div>

        <div id="workDetailsWrapper" class="row mb-3">

            <!-- Sheet / Modelling -->
            <div class="col-md-4">
                <label class="form-label">Sheet / Modelling</label>
                <div class="form-control">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input"
                               type="radio"
                               name="Input.WorkType"
                               value="S"
                               id="workTypeSheet"
                               @(Model.Input.WorkType == "S" ? "checked" : null) />
                        <label class="form-check-label" for="workTypeSheet">Sheet</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input"
                               type="radio"
                               name="Input.WorkType"
                               value="M"
                               id="workTypeModelling"
                               @(Model.Input.WorkType == "M" ? "checked" : null) />
                        <label class="form-check-label" for="workTypeModelling">Modelling</label>
                    </div>
                </div>
                <span class="text-danger" asp-validation-for="Input.WorkType"></span>
            </div>

            <!-- Levels -->
            <div class="col-md-3">
                <label class="form-label">Level(s)</label>
                <div class="form-control level-scroll">
                    <div class="level-grid">
                        @foreach (var level in Mep1.Erp.TimesheetWeb.Pages.Timesheet.EditModel.LevelOptions)
                        {
                            var isChecked = Model.Input.Levels.Contains(level);
                            var id = $"lvl_{level}";

                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       id="@id"
                                       name="Input.Levels"
                                       value="@level"
                                       @(isChecked ? "checked" : null) />
                                <label class="form-check-label" for="@id">@level</label>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Areas -->
            <div class="col-md-5">
                <label class="form-label">Area(s)</label>
                <input type="text"
                       class="form-control"
                       name="Input.AreasRaw"
                       value="@Model.Input.AreasRaw"
                       placeholder="e.g. Core, East Wing, Plantroom" />
                <div class="form-text">Comma-separated.</div>
            </div>

        </div>

        <div class="col-md-12">
            <label class="form-label">Job Task Description</label>
            <textarea id="taskDescription" class="form-control" rows="5" asp-for="Input.TaskDescription"></textarea>
            <span class="text-danger" asp-validation-for="Input.TaskDescription"></span>
        </div>

        <div id="ccfRefRow" class="row mb-3" style="display:none;">
            <div class="col-md-6">
                <label asp-for="Input.CcfRef" class="form-label">CCF Ref</label>
                <input asp-for="Input.CcfRef"
                       id="ccfRefInput"
                       class="form-control"
                       list="ccfRefList"
                       inputmode="numeric"
                       autocomplete="off"
                       placeholder="e.g. 004" />
                <datalist id="ccfRefList"></datalist>
                <span asp-validation-for="Input.CcfRef" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-secondary" asp-page="/Timesheet/History">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Optional: simple client-side hide/show of CCF ref
        (function () {
            const codeSel = document.querySelector('[name="Input.Code"]');
            const ccfInput = document.querySelector('[name="Input.CcfRef"]');
            if (!codeSel || !ccfInput) return;

            const wrapper = ccfInput.closest('.col-md-6');
            function refresh() {
                const isVO = (codeSel.value || '').toUpperCase() === 'VO';
                if (wrapper) wrapper.style.display = isVO ? '' : 'none';
                if (!isVO) ccfInput.value = '';
            }
            codeSel.addEventListener('change', refresh);
            refresh();
        })();
    </script>

    <script>
        (function () {
            const jobSelect = document.getElementById("jobSelect");
            const codeSelect = document.getElementById("codeSelect");
            const hoursInput = document.getElementById("hoursInput");
            const taskDescription = document.getElementById("taskDescription");

            // Make them look "greyed out" when locked
            function setLocked(el, locked) {
                if (!el) return;
                if (locked) {
                    el.classList.add("bg-light");
                } else {
                    el.classList.remove("bg-light");
                }
            }

            let lockedCode = null; // null = not locked, otherwise forced value e.g. "SI"

            function applyRules() {
                const jobText = (jobSelect?.options[jobSelect.selectedIndex]?.text || "").trim().toLowerCase();

                const isHoliday = jobText === "holiday" || jobText === "bank holiday";
                const isSick = jobText === "sick";
                const isFeeProposal = jobText === "fee proposal";
                const isTender = jobText === "tender presentation";

                if (isHoliday) {
                    lockedCode = "HOL";
                    codeSelect.value = "HOL";
                    hoursInput.value = "0";
                    hoursInput.readOnly = true;
                    taskDescription.value = "";
                    taskDescription.readOnly = true;

                    setLocked(codeSelect, true);
                    setLocked(hoursInput, true);
                    setLocked(taskDescription, true);
                }
                else if (isSick) {
                    lockedCode = "SI";
                    codeSelect.value = "SI";
                    hoursInput.value = "0";
                    hoursInput.readOnly = true;
                    taskDescription.value = "";
                    taskDescription.readOnly = true;

                    setLocked(codeSelect, true);
                    setLocked(hoursInput, true);
                    setLocked(taskDescription, true);
                }
                else if (isFeeProposal) {
                    lockedCode = "FP";
                    codeSelect.value = "FP";
                    hoursInput.readOnly = false;
                    taskDescription.readOnly = false;

                    setLocked(codeSelect, true);
                    setLocked(hoursInput, false);
                    setLocked(taskDescription, false);
                }
                else if (isTender) {
                    lockedCode = "TP";
                    codeSelect.value = "TP";
                    hoursInput.readOnly = false;
                    taskDescription.readOnly = false;

                    setLocked(codeSelect, true);
                    setLocked(hoursInput, false);
                    setLocked(taskDescription, false);
                }
                else {
                    lockedCode = null;
                    hoursInput.readOnly = false;
                    taskDescription.readOnly = false;

                    setLocked(codeSelect, false);
                    setLocked(hoursInput, false);
                    setLocked(taskDescription, false);
                }
            }

            // Prevent changing Code when it's locked (but keep it enabled so it still posts)
            codeSelect?.addEventListener("change", function () {
                if (lockedCode && codeSelect.value !== lockedCode) {
                    codeSelect.value = lockedCode;
                }
            });

            jobSelect?.addEventListener("change", applyRules);

            // Apply on initial page load too
            applyRules();
        })();
    </script>

    <script>
        // Hide/show Sheet/Modelling, Level, Area based on selected job category
        (function () {
            const jobSel = document.querySelector('[name="Input.JobKey"]');
            const wrapper = document.getElementById('workDetailsWrapper');
            if (!jobSel || !wrapper) return;

            const jobKeyShowsWorkDetails = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.JobKeyShowsWorkDetails));

            function clearWorkDetails() {
                // WorkType radios
                const radios = document.querySelectorAll('[name="Input.WorkType"]');
                radios.forEach(r => r.checked = false);

                // Levels checkboxes
                const levelChecks = document.querySelectorAll('[name="Input.Levels"]');
                levelChecks.forEach(c => c.checked = false);

                // Areas
                const areas = document.querySelector('[name="Input.AreasRaw"]');
                if (areas) areas.value = '';
            }

            function refresh() {
                const key = jobSel.value || '';
                const show = jobKeyShowsWorkDetails[key] === true;

                wrapper.style.display = show ? '' : 'none';
                if (!show) clearWorkDetails();
            }

            jobSel.addEventListener('change', refresh);
            refresh();
        })();
    </script>

    <script>
        (function () {
            const job = document.querySelector('[name="Input.JobKey"]');
            const code = document.querySelector('[name="Input.Code"]');

            const ccfRow = document.getElementById('ccfRefRow');
            const ccfInput = document.getElementById('ccfRefInput');
            const list = document.getElementById('ccfRefList');

            const ccfTriggerCodes = new Set(['VO']);

            async function refreshCcfList() {
                const jobKey = (job && job.value) ? job.value : '';
                list.innerHTML = '';
                if (!jobKey) return;

                const url = '?handler=CcfRefs&jobKey=' + encodeURIComponent(jobKey);
                const res = await fetch(url, { credentials: 'same-origin' });
                if (!res.ok) return;

                const items = await res.json();
                if (!Array.isArray(items)) return;

                for (const v of items) {
                    const opt = document.createElement('option');
                    opt.value = v;
                    list.appendChild(opt);
                }
            }

            function applyCcfVisibility() {
                const c = (code && code.value) ? code.value : '';
                const show = ccfTriggerCodes.has(c);
                ccfRow.style.display = show ? '' : 'none';
                if (!show) ccfInput.value = '';
            }

            if (job) job.addEventListener('change', refreshCcfList);
            if (code) code.addEventListener('change', applyCcfVisibility);

            // initial load (edit/back nav etc.)
            refreshCcfList();
            applyCcfVisibility();
        })();
    </script>

}
