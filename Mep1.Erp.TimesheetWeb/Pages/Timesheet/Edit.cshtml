@page
@model Mep1.Erp.TimesheetWeb.Pages.Timesheet.EditModel

<h2>Edit Timesheet Entry</h2>

<p>
    <a asp-page="/Timesheet/History">Back to History</a>
</p>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Date</label>
            <input class="form-control" type="date" asp-for="Input.Date" />
            <span class="text-danger" asp-validation-for="Input.Date"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Job</label>
            <select class="form-select" asp-for="Input.JobKey" asp-items="Model.ProjectOptions"></select>
            <span class="text-danger" asp-validation-for="Input.JobKey"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Code</label>
            <select class="form-select" asp-for="Input.Code" asp-items="Model.CodeOptions"></select>
            <span class="text-danger" asp-validation-for="Input.Code"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Hours</label>
            <input class="form-control" type="number" step="0.5" min="0" max="24" asp-for="Input.Hours" />
            <span class="text-danger" asp-validation-for="Input.Hours"></span>
        </div>

        <div class="col-12">
            <label class="form-label">Description</label>
            <textarea class="form-control" rows="3" asp-for="Input.TaskDescription"></textarea>
            <span class="text-danger" asp-validation-for="Input.TaskDescription"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">CCF Ref</label>
            <input class="form-control" asp-for="Input.CcfRef" />
            <span class="text-danger" asp-validation-for="Input.CcfRef"></span>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" asp-page="/Timesheet/History">Cancel</a>
    </div>
</form>
